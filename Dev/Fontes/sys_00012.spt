/**
   Cria parâmetro da sessão

	@author    Ricardo Gonçalves
	@date      16/12/2014
	@trigger   

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION sys_00012####???(
   in in_parametro varchar(22),
   in in_valor text)
  RETURNS integer AS
$$
Declare
   vnome    [(ss048)].nome%type;
BEGIN   
   vnome := upper(in_parametro);
   
   if not exists(
      select 1
        from [(ss048)]
       where session = sys_session()
         and nome = vnome)
   then
      insert into [(ss048)] (session, nome, valor)
           values           (sys_session(), vnome, in_valor);
   else
      update [(ss048)]
         set valor = in_valor
       where session = sys_session()
         and nome = vnome;
   end if;

   return 1;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;