/**
   Associa recomendações ou tipos de laudo a um diagnóstico

	@author    Ricardo Gonçalves
	@date      31/03/2012 17:19:40
	@trigger
	
	@in_diag integer código do diangóstico.
	@in_tipo integer código do tipo de associação que deverá ser feita. 1 - tipo de laudo / 2 - recomendação / 3 - ambos

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00431####???(
   in in_diag integer,
   in in_tipo integer)
  RETURNS void AS
$$
BEGIN
   -- Verifica se o diagnóstico informado é válido
   if not exists(
      select 1
        from [(b09)]
       where recno = in_diag)
   then
      raise '[[Código de diagnóstico (%) inválido!]]', in_diag;
   end if;

   -- Associação ao tipo de laudo
   if in_tipo in (1,3) then
      insert into [(b11)] (b07_recno, b09_recno)
      select recfile, in_diag
        from [(ss029)] a
             left join [(b11)] b
               on b.b07_recno = a.recfile
              and b.b09_recno = in_diag
       where a.session = sys_session()
         and a.codtable = 'B07'
         and b.recno is null;
   end if;

    -- Associação ao tipo de laudo
   if in_tipo in (2,3) then
      insert into [(b10)] (b06_recno, b09_recno)
      select recfile, in_diag
        from [(ss029)] a
             left join [(b10)] b
               on b.b06_recno = a.recfile
              and b.b09_recno = in_diag
       where a.session = sys_session()
         and a.codtable = 'B06'
         and b.recno is null;
   end if;

END;
$$
  LANGUAGE 'plpgsql' VOLATILE;