/**
   Prepara registro de histórico da reserva

	@author    Fabio Carvalho
	@date      01/08/2009
	@trigger   LON B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_00181####???()
Returns trigger
As
$$
Begin
   if tg_op = 'INSERT' then
      new.lon_datahora := localtimestamp;
      return new;
   end if;

   raise '[[Não é permitido alterar/excluir históricos de reserva.]]';
End;
$$ language plpgsql;