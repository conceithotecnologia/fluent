Create or Replace Function sys_getflag####???
(  In  in_codtable varchar,
   In  in_recno    integer,
   Out out_result  integer )
As $$
Begin
   out_result := 0;

   -- Obtem a marcação
   if exists(Select 1
     From [(ss080)]
    Where owner_table = in_codtable
      And owner_recno  = in_recno)
   then
      out_result := 1;
   End if;
End;
$$ language plpgsql;
