Create or Replace Function mc_00867####???
(   in  pData   date,
   out out_res  integer )
As $$
Declare
   dMaxima   date;
Begin
   out_res := 0;

   --===============FECHAMENTO DO CAIXA=========================--
   -- verifica se caixa foi encerrado e nao permite exclusao
   if (select tg8_status
         From [(tg8)]
        Where tg8_data = pData) = 1 then
      raise '[[O Caixa do dia % já foi ENCERRADO e não é possivel efetuar este movimento.]]',mask_00004(pData);
   elsif not exists (select 1
                       From [(tg8)]
                      Where tg8_data = pData) then
      insert into [(tg8)] (tg8_data, tg8_status)
                   values (pData,    0);
   end if;

   -- verifica se movimento é superior ao ultimo caixa
   select max(tg8_data)
     into dMaxima
     from [(tg8)]
    Where tg8_status = 1;

   if pData <= dMaxima then
      raise '[[Não é possivel incluir caixa com data inferior a %. Verifique !]]', mask_00004(dMaxima);
   end if;

   -- Verifica se tem o parametro cadastrado de caixa principal de acerto de frotas
   if not exists (select 1
                    from [(tl0)]
                   where tl0_ak_cc is not null) then
      raise '[[ATENÇÃO. Faça o cadastro de caixa principal em Parâmetros Diversos.]]';
   end if;

   out_res := 1;
End;
$$ language plpgsql;