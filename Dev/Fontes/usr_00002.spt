/**
   Cálculo da Acidez

	@author    Ricardo Gonçalves
	@date      17/05/2011 21:17:32
	@trigger

	@param in_recno Conteúdo do campo "recno" da tabela [(b39)]

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION usr_00002####???(
   in in_recno integer)
  RETURNS void AS
$$
Declare
   iamostra    [(b36)].recno%type;
   dcriacao    [(b37)].b37_criacao%type;
   fmedia      [(b27)].b27_media%type;
BEGIN
   -- Obtem o número da amostra
   select b36_recno
     into iamostra
     from [(b39)]
    where recno = in_recno;

   -- Obtenho data de criação de relatório
   select r.b37_criacao
     into dcriacao
     from [(b37)] r
    where b36_recno = iamostra;

   -- Obtendo a média do fator de acidez para data de criação do relatório
   select b27_media
     into fmedia
     from [(b27)] a
          join (
               select max(b27_vigencia) as b27_vigencia
                 from [(b27)]
                where b27_vigencia <= dcriacao) v
            on v.b27_vigencia = a.b27_vigencia;

   if not Found then
      raise '[[Não foi possível encontrar o fator de acidez para data %. O índice de neutralização não pode ser calculado.]]',
         to_char(dcriacao, 'DD/MM/YYYY');
   end if;

   if usr_00001####???(in_recno, 'peso') > 0 then
      -- Atualiza ensaio
      update [(b39)]
         set b39_valor = round((usr_00001####???(in_recno, 'volume') - usr_00001####???(in_recno, 'valor_branco')) * fmedia * 56.1 / usr_00001####???(in_recno, 'peso'), 4)
       where recno = in_recno;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;