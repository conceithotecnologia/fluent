/**
    Checa se o usuário tem acesso a um determinado recurso

	@author    Ricardo Gonçalves
	@date      18/05/2010 22:45:38
	@trigger
	
	@param in_sys código do sistema
	@param in_role código do papel
	@param in_perm código da permissão

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function sys_ckaccess####???(
   in in_sys integer,
   in in_role integer,
   in in_perm varchar(25))
Returns integer
As
$$
Declare
   r97   record;
Begin
   -- Verifica se permissão informada é nula
   if in_perm is null or in_sys is null or in_role is null then
      return 0;
   end if;
      
   if exists(
      select 1
        from [(ss098)]
       where codsis = in_sys
         and perm_id = in_perm
         and role_id = in_role)
   then
      return 1;
   end if;

   select role_parent
     into r97
     from [(ss097)]
    where role_id = in_role;

   while Found Loop
      if exists(
         select 1
           from [(ss098)]
          where codsis = in_sys
            and perm_id = in_perm
            and role_id = r97.role_parent)
      then
         return 1;
      end if;

      select role_parent
        into r97
        from [(ss097)]
       where role_id = r97.role_parent;
   End Loop;

   return 0;
End;
$$
language plpgsql;