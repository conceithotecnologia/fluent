Create or Replace Function mc_00128####???()
Returns trigger
As
$$
Begin
   if tg_op = 'INSERT' then
      if new.sej_tipo = 1 then
         Update [(sdl)]
            set sdl_etapa = 1
          where sdl_docto = new.sdl_docto;
      elsif new.sej_tipo = 2 then
         Update [(sdl)]
            set sdl_estado = 7
          where sdl_docto = new.sdl_docto;
      else
         raise '[[Tratamento para o tipo de estorno % não implementado]]', new.sej_tipo;
      end if;
   end if;

   if tg_op != 'DELETE' then
      Return New;
   else
      Return Old;
   end if;
End
$$
language plpgsql;