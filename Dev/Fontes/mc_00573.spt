Create or Replace Function mc_00573####???
() Returns trigger
As $$
Begin
   If tg_op <> 'DELETE' Then
      If new.fc2_origem = 'FC2' Then
         new.fc2_recno := new.recno;
      End If;
      If tg_op = 'INSERT' Then
         new.fc2_dfluxo := new.fc2_data;
      End If;
      Return new;
   Else
      Return old;
   End If;
End;
$$ language plpgsql;

