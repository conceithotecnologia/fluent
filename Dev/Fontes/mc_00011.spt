/**
   Processamento da baixa dos números de série

	@author    Ricardo Gonçalves
	@date      05/08/2014 22:17
	@trigger   A4D B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00011####???() 
Returns trigger As 
$$
Declare
   vz2_coduni   [(sz2)].z2_coduni%type;
Begin
   if tg_op <> 'DELETE' then
      new.a4d_estado := 1;
      new.a4d_obs := null;
      
      if new.a4d_qtdnser != new.a4d_qtdnsertot then
         new.a4d_estado := 0;
         new.a4d_obs := format('Há %s nº de série a registrar', round(new.a4d_qtdnsertot - new.a4d_qtdnser));
      end if;
      
      if mc_00049####???(new.b1_codpro) = 1 then
         if new.a4d_qtdu1 != new.a4d_qtdloteu1 or new.a4d_qtdu2 != new.a4d_qtdloteu2 then
            select z2_coduni
              into vz2_coduni
              from [(sbf)]
             where b1_codpro = new.b1_codpro;
         
            new.a4d_estado := 0;
            new.a4d_obs := format('%s %s %s para distribuir em lotes.', coalesce(new.a4d_obs || ' e ', 'Há '), mask_00011(new.a4d_qtdu1 - new.a4d_qtdloteu1), vz2_coduni);         
         end if;
      end if;

      Return new;
   End If;
   
   Return old;
End;
$$ language plpgsql;