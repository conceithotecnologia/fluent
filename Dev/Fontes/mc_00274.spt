/**
   Geração da chave da Nfe

   @author    Wagner Mobile Costa
   @date      16/08/2010 18:10:00
   @function

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00274
(
   in_uf      varchar(2),
   in_codigo  integer,
   in_modelo  varchar(2),
   in_serie   varchar(3),
   in_numero  integer,
   in_emissao date,
   in_cnpj    varchar(14),
   in_tpemis  varchar(1),
   in_versao  varchar(20)
)
Returns varchar(44)
As
$$
Declare
  fchave  varchar(43);
Begin
   if in_versao = '2.0' then
      fChave:= in_uf ||
               sys_right(sys_year(in_emissao)::varchar(4), 2) ||
               sys_strzero(sys_month(in_emissao), 2) ||
               in_cnpj ||
               in_modelo ||
               sys_strzero(in_serie::integer, 3) ||
               sys_strzero(in_numero, 9) ||
               in_tpemis ||
               sys_strzero(in_codigo, 8);
   else
      fChave:= in_uf ||
               sys_right(sys_year(in_emissao)::varchar(4), 2) ||
               sys_strzero(sys_month(in_emissao), 2) ||
               in_cnpj ||
               in_modelo ||
               sys_strzero(in_serie::integer, 3) ||
               sys_strzero(in_numero, 9) ||
               sys_strzero(in_codigo, 9);
   end if;
   return fChave || mc_00275(fChave);
End;
$$
language plpgsql;
