/**
   Prepara a inserção dos arquivos que serão transmitidos

	@author    Ricardo Gonçalves
	@date      18/07/2019
	@trigger   SS145 B IUD

	Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
create or replace function mc_01255####???()
returns trigger as
$$
begin
   if tg_op = 'DELETE' then
      if old.status = 1 then
         raise '[[Arquivos em transmissão para o servidor de FTP. PID: SS145.%]]', old.recno;   
      end if;
      return old;
   end if;

   if tg_op = 'UPDATE' then
      -- validando processo
      if new.status = 1 and old.status = 0 then
         if not exists(
            select 1
              from [(ss146)]
             where pid = new.recno)
         then
            raise '[[Não existem arquivos a transmitir. PID: SS145.%]]', new.recno;
         end if;
      end if;
   else
      if new.target_server is null then
         raise '[[É necessário informar o servidor FTP de destino. PID: SS145.%.]]', new.recno;
      end if;
   end if;

   return new;
end;
$$
language plpgsql;