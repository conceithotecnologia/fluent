/**
   Rotina de Encerramento de Lançamentos Marcados

	@author    Fabio Carvalho
	@date      08/11/2016
	@trigger

	@param     pNaoSim     Integer

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00458####???
(  in  pNaoSim integer,
   out outres  integer )
As $$
Declare
   cSessao      varchar;
Begin
   cSessao := sys_session####???();

   --Verifica se Tem registro Marcado na Tela
   if not exists(select 1
                   from [(ss029)]
                  where session  = cSessao
                    and codtable = 'CTY') then
      raise '[[ATENÇÃO. Não foi marcado nenhum registro. Verifique!]]';
   end if;

   --Altera os Status Marcados
   update [(cty)] set cty_status = 1
     from [(ss029)] b, [(cty)] a
    where b.session    = cSessao
      and b.codform    = 'CTY_01'
      and b.codtable   = 'CTY'
      and a.cty_status = 0
      and a.recno = b.recfile;

   outres := 1;
End;
$$ language plpgsql;