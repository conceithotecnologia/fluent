/**
   Estoque - Finalizar registro de movimentação

	@author    Gabriel Montes
	@date      05/09/2016 11:14
	@trigger   
   
   @param in_a49_recno  código da ordem de movimentação base para fazer/baixar reserva
   @param in_operac  1 - Reserva / 2 - Baixa da reserva

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00970####???()
Returns integer As 
$$
Declare
   r        record;
   csession varchar;
   vmessage text;
Begin

    csession := sys_session();
	
    for r in (
       select a5r.recno, a5r.a5r_estado
         from [(ss029)] ss029
              join [(a5r)] a5r
                on a5r.recno = ss029.recfile
        where ss029.session = csession
          and ss029.codform = 'VA5R_01' 
          and ss029.codtable = 'VA5R')
    loop
		
      -- begin         
         if r.a5r_estado = 1 then
		 	   update [(a5r)] a5r
		 		   set a5r_estado = 2
				 where a5r.recno = r.recno;
		 	  
               perform sys_msg####???(1, format('Movimentação %s finalizada.', r.recno)); 
            else
               perform sys_msg####???(3, format('Movimentação %s já está finalizada.', r.recno)); 
            end if;
           
            delete 
              from [(ss029)]
             where recfile = r.recno; 
            
      -- exception
      --    when raise_exception then            
      --       perform sys_msg####???(3, format('Não foi possível encerrar a movimentação %s, verifique o saldo atual deste produto.', r.recno));
      --       get stacked diagnostics vmessage := MESSAGE_TEXT;            
      --       perform sys_msg####???(3, trim(vmessage));
      -- end;

    end loop;
	
	Return 1;
end;
$$ 
language 'plpgsql'
