 /**
   Validação de inserção de itens na cotação

	@author    Gabriel Montes
	@date      24/10/2013 10:47:00
	@trigger   SH6 B IUD

	Histórico  
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/

CREATE OR REPLACE FUNCTION mc_00712####???()
Returns trigger
as $$
DECLARE
   r     record;
   r1    record;
Begin 
   
   if (tg_op = 'DELETE') then

      select sfj.sfj_pessoa, sfj.sfj_nome
        into r
        from [(a2k)] a2k 
            join [(sfj)] sfj
              on sfj.sfj_pessoa = a2k.sfj_pessoa             
      where a2k.sfj_pessoa = ck_00009####???(sys_user####???()); 
      
      if old.sh8_tipo = 1 -- Material
         then
         -- Compara os grupos de Material cadastrados no grupo de compradores com os grupos de Materials do item a ser alterado. 
         if not exists(
            select 1 
              from [(a3s)] a3s
                  join [(a3w)] a3w
                    on a3w.recno = a3s.a3w_recno
                  join [(sh0)] sh0
                    on sh0.a3w_recno = a3w.recno
                  join [(shi)] shi
                    on shi.b4_codfam = sh0.b4_codfam
                   and shi.shi_codpro = old.shi_codpro
                  join [(a2k)] a2k
                    on a2k.sfj_pessoa = a3s.sfj_pessoa
                   and a2k.coduser = sys_user####???()
             where a3w.a3w_estado = 1
               and a3s.a3s_situacao = 1
            union
            select 1
              from [(a3s)] a3s
                  join [(a3w)] a3w
                    on a3w.recno = a3s.a3w_recno
                  join [(sha)] sha
                    on sha.a3w_recno = a3w.recno
                   and sha.shi_codpro = old.shi_codpro
                  join [(a2k)] a2k
                    on a2k.sfj_pessoa = a3s.sfj_pessoa
                   and a2k.coduser = sys_user####???()
             where a3w.a3w_estado = 1
               and a3s.a3s_situacao = 1) 
         then 
            raise '[[O material "%" não está cadastrado no grupo de materiais que o usuário "%" pode cotar. [63] ]]',old.shi_codpro,sys_user####???();
         end if;
      end if;
      
      if old.sh8_tipo = 2 -- Serviço
         then
         if not exists(
         select 1 
           from [(a3s)] a3s
               join [(a3w)] a3w
                 on a3w.recno = a3s.a3w_recno
               join [(sh4)] sh4
                 on sh4.a3w_recno = a3w.recno
               join [(sew)] sew
                 on sew.sew_codfam = sh4.sew_codfam
                and sew.sew_servico = old.sew_servico
               join [(a2k)] a2k
                 on a2k.sfj_pessoa = a3s.sfj_pessoa
                and a2k.coduser = sys_user####???()
         where a3w.a3w_estado = 1
           and a3s.a3s_situacao = 1
         union
         select 1
           from [(a3s)] a3s
               join [(a3w)] a3w
                 on a3w.recno = a3s.a3w_recno
               join [(shb)] shb
                 on shb.a3w_recno = a3w.recno
                and shb.sew_servico = old.sew_servico
               join [(a2k)] a2k
                 on a2k.sfj_pessoa = a3s.sfj_pessoa
                and a2k.coduser = sys_user####???()
          where a3w.a3w_estado = 1
            and a3s.a3s_situacao = 1)
         then 
            raise '[[O serviço "%" não está cadastrado no grupo de serviços que o usuário "%" pode cotar.]]',old.sew_servico,sys_user####???();
         end if;
      end if;
      
      return old;
   end if;
   
   if (tg_op <> 'DELETE') then
      
      if (tg_op = 'INSERT') then
         new.sh6_estado  := 4;
      end if;
      
      select sfj.sfj_pessoa, sfj.sfj_nome
        into r
        from [(a2k)] a2k 
            join [(sfj)] sfj
              on sfj.sfj_pessoa = a2k.sfj_pessoa             
      where a2k.sfj_pessoa = ck_00009####???(sys_user####???()); 
      
      if new.sh8_tipo = 1 -- Material
         then
         -- Compara os grupos de Material cadastrados no grupo de compradores com os grupos de Materials do item a ser alterado. 
         if not exists(
            select 1 
              from [(a3s)] a3s
                  join [(a3w)] a3w
                    on a3w.recno = a3s.a3w_recno
                  join [(sh0)] sh0
                    on sh0.a3w_recno = a3w.recno
                  join [(shi)] shi
                    on shi.b4_codfam = sh0.b4_codfam
                   and shi.shi_codpro = new.shi_codpro
                  join [(a2k)] a2k
                    on a2k.sfj_pessoa = a3s.sfj_pessoa
                   and a2k.coduser = sys_user####???()
             where a3w.a3w_estado = 1
               and a3s.a3s_situacao = 1
            union
            select 1
              from [(a3s)] a3s
                  join [(a3w)] a3w
                    on a3w.recno = a3s.a3w_recno
                  join [(sha)] sha
                    on sha.a3w_recno = a3w.recno
                   and sha.shi_codpro = new.shi_codpro
                  join [(a2k)] a2k
                    on a2k.sfj_pessoa = a3s.sfj_pessoa
                   and a2k.coduser = sys_user####???()
             where a3w.a3w_estado = 1
               and a3s.a3s_situacao = 1) 
         then 
            raise '[[O material "%" não está cadastrado no grupo de materiais que o usuário "%" pode cotar. [150] ]]',new.shi_codpro,sys_user####???();
         end if;
      end if;
      
      if new.sh8_tipo = 2 -- Serviço
         then
         if not exists(
         select 1 
           from [(a3s)] a3s
               join [(a3w)] a3w
                 on a3w.recno = a3s.a3w_recno
               join [(sh4)] sh4
                 on sh4.a3w_recno = a3w.recno
               join [(sew)] sew
                 on sew.sew_codfam = sh4.sew_codfam
                and sew.sew_servico = new.sew_servico
               join [(a2k)] a2k
                 on a2k.sfj_pessoa = a3s.sfj_pessoa
                and a2k.coduser = sys_user####???()
         where a3w.a3w_estado = 1
           and a3s.a3s_situacao = 1
         union
         select 1
           from [(a3s)] a3s
               join [(a3w)] a3w
                 on a3w.recno = a3s.a3w_recno
               join [(shb)] shb
                 on shb.a3w_recno = a3w.recno
                and shb.sew_servico = new.sew_servico
               join [(a2k)] a2k
                 on a2k.sfj_pessoa = a3s.sfj_pessoa
                and a2k.coduser = sys_user####???()
          where a3w.a3w_estado = 1
            and a3s.a3s_situacao = 1)
         then 
            raise '[[O serviço "%" não está cadastrado no grupo de serviços que o usuário "%" pode cotar.]]',new.sew_servico,sys_user####???();
         end if;
      end if;
      
      if new.sh8_tipo = 1 then
         if new.b1_codpro is null then            
            raise '[[Para gerar uma cotação o campo "Material Cotado" deve ser preenchido.]]';
         end if;         
         
      else
         if new.b1_codpro is not null then
            new.b1_codpro := null;
         end if;
      end if;
      
   end if;
   
   return new; 
          
END;
$$ 
Language plpgsql; 