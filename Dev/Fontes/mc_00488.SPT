/**
   Validação de cadastro de supervisor

	@author    Gabriel Montes
	@date      14/05/2013 11:05:00
	@trigger   A3O B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00488####???()
Returns trigger
as
$$
Declare
Begin
   IF(tg_op = 'DELETE') THEN
      RETURN old;
   end if;
      
      if (tg_op = 'INSERT') then
         new.a3o_estado = 0;
      end if;
      
      if not exists(
         select 1
           from [(a3r)] a3r
               join [(a3o)] a3o
                 on a3r.a3o_recno = new.recno
                and a3r_situacao = 1) then      
         if new.a3o_estado = 1 then
            raise '[[O grupo só pode ser "ativo" depois que um supervisor "ativo" for adicionado.]]';
         end if;
      end if;

      return new;      

END;
$$ 
Language plpgsql;