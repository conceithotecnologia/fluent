Create or Replace Function mc_01118####???()
Returns trigger As
$$
Declare
   r     record;
   rl    record;
   xconv econv;
Begin  
   if tg_op = 'DELETE' then
      return old;   
   end if;
   
   if tg_op = 'INSERT' then
      new.a4v_qtd := new.a4v_qtd_ant;
   end if;

   return new;
End;
