/**
   Recupera paramêtro

	@author    Ricardo Gonçalves
	@date      26/03/2012 17:51:44
	@trigger

	@param in_param_name nome da coluna onde o parâmetro deve ser obtido.
	@param in_default valor padrão caso o parâmetro não seja localizado.

	@return conteúdo do parâmetro informado.

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION sys_param_text####???(
   in in_param_name varchar,
   in in_default text)
  RETURNS text AS
$$
Declare
   ret   text;
   res   text;
BEGIN
   res := in_default;
   -- Checa o tipo da coluna
   if not exists(
      select 1
        from ss012 a
             join ss085 b
               on b.recno = a.content_type
              and b.datatype = 'M'
       where a.codtable in ('SS081', 'FCC', 'SS063')
         and a.columnname = upper(in_param_name))
   then
      raise 'O parâmetro "%" não é tipo text.', upper(in_param_name);
   end if;
   res := sys_param####???(in_param_name, res);

   return res;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;