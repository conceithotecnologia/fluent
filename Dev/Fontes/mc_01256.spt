/**
   Prepara a inserção dos arquivos que serão transmitidos

	@author    Ricardo Gonçalves
	@date      18/07/2019
	@trigger   SS145 A IUD

	Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
create or replace function mc_01256####???()
returns trigger as
$$
begin
   if tg_op = 'UPDATE' then
      -- Gerando processo de transmissão
      if new.status = 1 and old.status = 0 then
         insert into [(ss084)]
            (servico, acao,       codtable, ss084_recno)
         values
            (16,      new.action, 'SS145',  new.recno);
      end if;

      if new.status = 3 and old.status = 1 then
      
         if new.codtable = 'SS103' and new.ss145_recno = 2 then
            perform mc_01257####???();
         end if;

      end if; 

   end if;

   return null;
end;
$$
language plpgsql;