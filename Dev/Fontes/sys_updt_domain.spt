create or replace function sys_updt_domain() returns trigger as $$
Begin
   Update ss012
      Set datatype = new.datatype,         size = new.size,                 precision = new.precision,   
          mask = new.mask,                 allowfilter = new.allowfilter, 
          allowquery = new.allowquery,     enableinsert = new.enableinsert,
          enableupdate = new.enableupdate, enablebrowse = new.enablebrowse, combo = new.combo,
          fktable = new.fktable,           fkfieldkey = new.fkfieldkey,     fklookup = new.fklookup
    Where domain_ = new.domain_;
   Return new;
End;
$$ language plpgsql;