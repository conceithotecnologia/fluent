/**
   Processa atualização before alteração do plano de contas

	@author    Fabio Carvalho
	@date      02/06/2011 19:00:08
	@trigger   CTB B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00411####???()
  RETURNS trigger AS
$$
Declare
BEGIN
   if tg_op = 'DELETE' then
      perform mc_setflag####???('CTB', old.recno);

      delete
        from [(ctc)]
       where ctb_recno = old.recno;

      return old;
   end if;

   if tg_op = 'UPDATE' then
      if new.ctb_status = 1 then
         if not exists(
            select 1
              from [(ctc)]
             where ctb_recno = new.recno)
         then
            raise '[[O plano de contas % - % não pode ser habilitado porque não possui níveis.]]', new.recno, new.ctb_descri;
         end if;

         if not exists(
            select 1
              from [(ctd)]
             where ctb_recno = new.recno)
         then
            raise '[[O plano de contas % - % não pode ser habilitado porque não possui contas.]]', new.recno, new.ctb_descri;
         end if;
      end if;
   end if;

   return new;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;