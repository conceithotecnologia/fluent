create or replace function scr_00169####???()
returns integer
As $$   
Declare
   iPessoa integer;
begin   
   iPessoa := sys_042integer2####??? ('SF0', 'sfj_pessoa');
   if not exists ( 
      select 1 
        from [(a2k)] 
       where sfj_pessoa = iPessoa)
   then
      perform sys_042enabled_wr####???('SF0', 'sfj_nome', 1);
      return 1;
   else
      perform sys_042enabled_wr####???('SF0', 'sfj_nome', 0);
      return 1;
   end if;
   return 0;
end;
$$ language plpgsql;