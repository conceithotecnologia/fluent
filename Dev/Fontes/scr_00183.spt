/*
   Folha - Visão F99 - Preenche Automaticamente informações do colaborador caso este já esteja cadastrado no sistema;

	@author    Bárbara de Paula
	@date      10/11/2014 
	@trigger
	Histórico
---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/

create or replace function scr_00183####???()
returns integer
As $$
DECLARE
   iPessoa INTEGER;
   rDados  record;
   rEndereco record;

BEGIN
   iPessoa := sys_042integer2####???('F99', 'sfj_pessoa');
   
   select   sfj_nome,    sfj_apelido, sfj_ddi,   sfj_ddd,       sfj_ramal,    sfj_fone,
            sfj_fax,     sfj_email,   sfj_site,  sfj_obs,       sfj_cadastro, se2_vigencia, 
            se2_tipo,    se2_cep,     se2_ender, se2_num,       se2_compl,    se2_bairro, 
            se2_tipoend, f23_cod,     sz6_pais,  sz9_municipio, se2_ddi,      se2_ddd, 
            se2_ramal,   se2_fone
            
   into rDados
   from [(sfj)]
   left join [(se2)] 
          on sfj_pessoa = a1_codcli 
         and se2_ctrl = mc_00204####???(ipessoa, current_date, 1, 0)
   where sfj_pessoa = iPessoa;
     
   perform sys_042string_wr####??? ('F99', 'sfj_nome',     rDados.sfj_nome);
   perform sys_042string_wr####??? ('F99', 'sfj_apelido',  rDados.sfj_apelido);
   perform sys_042string_wr####??? ('F99', 'sfj_ddi',      rDados.sfj_ddi);
   perform sys_042string_wr####??? ('F99', 'sfj_ddd',      rDados.sfj_ddd);
   perform sys_042string_wr####??? ('F99', 'sfj_fone',     rDados.sfj_fone);
   perform sys_042string_wr####??? ('F99', 'sfj_fax',      rDados.sfj_fax);
   perform sys_042string_wr####??? ('F99', 'sfj_email',    rDados.sfj_email);
   perform sys_042string_wr####??? ('F99', 'sfj_site',     rDados.sfj_site);
   perform sys_042string_wr####??? ('F99', 'sfj_obs',      rDados.sfj_obs);  
   perform sys_042date_wr####???   ('F99', 'se2_vigencia', rDados.se2_vigencia);
   perform sys_042string_wr####??? ('F99', 'f23_cod',      rDados.f23_cod);
   perform sys_042integer_wr####???('F99', 'se2_tipo',     rDados.se2_tipo);
   perform sys_042string_wr####??? ('F99', 'se2_cep',      rDados.se2_cep);
   perform sys_042string_wr####??? ('F99', 'se2_ender',    rDados.se2_ender);
   perform sys_042string_wr####??? ('F99', 'se2_num',      rDados.se2_num);
   perform sys_042string_wr####??? ('F99', 'se2_compl',    rDados.se2_compl);
   perform sys_042string_wr####??? ('F99', 'se2_bairro',   rDados.se2_bairro);
   perform sys_042integer_wr####???('F99', 'se2_tipoend',  rDados.se2_tipoend);
   perform sys_042integer_wr####???('F99', 'sz6_pais',     rDados.sz6_pais);
   perform sys_042string_wr####??? ('F99', 'z9_municipio', rDados.sz9_municipio);
   perform sys_042string_wr####??? ('F99', 'se2_ddi',      rDados.se2_ddi);
   perform sys_042string_wr####??? ('F99', 'se2_ddd',      rDados.se2_ddd);
   perform sys_042string_wr####??? ('F99', 'se2_fone',     rDados.se2_fone);
   
   return 1 ; 
   
end;
$$ LANGUAGE plpgsql;
