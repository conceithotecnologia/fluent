/**
   Criar Conta de Ftp dos Registros Marcados

	@author    Fabio Carvalho
	@date      15/08/2017
	@function

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01029####???
( out out_res    integer )
As $$
Declare
   iFilial     [(ss063)].filial%type;    -- Recebe a filial
   rFilial     record;
   rRec        record;
   rContatos   record;
   rTit        record;
   vfrom_      text;                     -- vfrom_ := 'MONITOR' || trim(to_char(ifil, '999'));
   mailhead    text;                     -- Cabeçalho do e-mail
   mailfooter  text;
   mailbody    text;
   vsubject    [(ss108)].subject%type;   -- Título do e-mail
   iItem       [(ss108)].recno%type;     -- Item
   in_data     timestamp;
   vTabela     varchar(30);
   vDir        Varchar(007);
   vTitREP     varchar(100);
   vDirFile    Varchar(255);
   vBranch     Varchar(004);
   iMaxParce   integer;
   iQuantos    integer;
   in_id       varchar(50);
   sStatus     varchar;
   iFcrItem    [(fcr)].fcr_item%type;    -- Item
begin
   --Verifica se Houve Algum registro Marcado
   if not exists (select 1
                    from [(ss029)] s29
                    join [(a4p)] a4p on s29.recfile = a4p.recno
                   where session = sys_session()
                     and s29.codtable = 'A4P') then
      raise '[[ATENÇÃO. Não há registros Marcados. Verifique!!]]';
   end if;

   --Verifica Se Selecionou algum registro já Criado
--   if exists (select 1
--                from [(ss029)] s29
--                join [(a4p)] a4p on s29.recfile = a4p.recno
--               where session = sys_session()
--                 and s29.codtable = 'A4P'
--                 and a4p_ftp = 1) then
--      raise '[[ATENÇÃO. Foi Selecionado Registro com Conta Ftp já Criada. Verifique!]]';
--   end if;


   --faz Update dos Campos
   update [(a4p)] a4p set a4p_revalidar = 1, a4p_ftp = 1
     from [(ss029)] s29
    where session = sys_session()
      and s29.codtable = 'A4P'
      and s29.recfile  = a4p.recno;

   out_res := 1;
End;
$$
language plpgsql;