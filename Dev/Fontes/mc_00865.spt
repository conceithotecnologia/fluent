/**
   Reprocessamento do kardex por lote e endereço

	@author    Ricardo Gonçalves
	@date      27/03/2018 18:26:00
	@trigger   
   
   @param in_pessoa pessoa detentora do material   
   @param in_ender endereçamento reprocessado
   @param in_data Data inicial para o reprocessamento
   @param in_inventario indica se lançamento refere-se a inventário

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00865####???(     
   in in_lote integer)
returns varchar As 
$$
Declare
   slote varchar;
Begin
   slote := null;
   
   select '.' + sd3_loteforn
     into slote
     from [(sd3)]
    where sd3_lote = in_lote;
    
   if not FOUND then
      slote := Format('!! Lote %s não localizado!!', in_lote);
   else
      slote := to_char(in_lote, 'FM99999999999') + coalesce(slote);
   end if;
   
   return slote;   
End;
$$ language plpgsql;
