/**
   Dispara o processo de geração arquivos de licenciamento

	@author    Ricardo Gonçalves
	@date      17/03/2016 19:43:00
	@trigger   
   
   @param   in_tec Código do responsável técnico pelo arquivo de licenciamento
   @return devolve 1 em caso de processamento com sucesso

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00931####???(
   in in_tec integer)
  RETURNS integer AS
$$
Declare
   vdescri     varchar;
BEGIN
   vdescri := Format('Criação do arquivo de licença para o responsável técnico %s', in_tec);

   if exists(
      select 1
        from [(ss084)]
       where codtable = 'A2Z'
         and ss084_recno = in_tec
         and estado in (0,3))
   then
      update [(ss084)] set estado = 0
       where codtable    = 'A2Z'
         and ss084_recno = in_tec
         and estado in (0,3);
--         and session is null;

      if not found then
         perform sys_msg####???(3, Format('%s está aguardando processamento.', vdescri));
      end if;
   else
      INSERT INTO [(ss084)] (servico, codtable, ss084_recno)
                     values (6,       'A2Z',    in_tec);
   end if;
   return 1;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;