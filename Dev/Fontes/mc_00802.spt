/**
   Cte - Gravação Dados Tabela Cte - Leiaute Rodoviario

   @author    Fabio Carvalho
   @date      23/07/2013
   @trigger   A52 B IUD

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00802####???()
Returns trigger
As
$$
Declare
begin
   if tg_op = 'DELETE' then
      return old;
   end if;

   -- Dados do Cte
   if new.codtable = 'A1P' then
      select substring(ss063_rntrc,1,8)
        into new.rodo_rntrc
        from [(ss063)]
       where filial = sys_filial####???();

      select a1p_dt_prev_entr , a1p_lotacao
        into new.rodo_dprev,    new.rodo_lota
        from [(a1p)]
       where recno = new.a52_recno;

--    new.rodo_ciot  :=
   end if;
   return new;
End;
$$
language plpgsql;