/**
   CRM - Validação da edição de itens cobrados no contrato

	@author    Ricardo Gonçalves
	@date      06/10/2012 17:51:57
	@trigger   A38 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00444####???()
  RETURNS trigger AS
$$
Declare
   vServ boolean;
BEGIN
   if tg_op <> 'DELETE' then
      vServ := tg_op = 'UPDATE';

      if tg_op = 'UPDATE' then
         vServ := old.sew_servico = new.sew_servico;
      end if;

      if vServ then
         perform ck_00008####???(new.sew_servico, true);
      end if;

      new.a38_cadastro := coalesce(new.a38_cadastro, sys_timestamp());

      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;