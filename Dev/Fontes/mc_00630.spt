/**
   Baixa automática dos títulos selecionados - Contas a Pagar

   @author    Jurandy da Silva Costa
   @date      30/06/2005 20:00:00
   @function
   @param     in_iFormaPg:     Integer        Forma de Pagamento 0-Eletronico, 1-Cheque, 2-Dinheiro
              in_iTipoData:    Integer        Data da Baixa      1-Vencimento, 2-Data Base, 3-Data Atual
              in_iTpBaixa:     Integer        Tipo de Baixa      1-Pagamento, 2-Devolução, 3-Estorno

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00630####???
( In  in_iFormaPg   Integer,
  In  in_iTipoData  Integer,
  In  in_iTpBaixa   Integer,
  In  in_ak_cc      varchar(25),
  In  in_fa1_caixa  Integer,
  In  in_fcg_cartao integer,
  Out out_res       Integer )
As $$
Declare
-- {Variáveis de uso interno}
   cSessao           VarChar(35);
   dDataBaixa        Date;

Begin
   out_res := 0;
   -- Não aceita Tipo de Baixa 0-Em Aberto
   If in_iTpBaixa < 1 Or in_iTpBaixa > 3 Then
      raise '[[ATENÇÃO. Tipo de Baixa Inválido. Favor verificar.]]';
   End If;
   -- Recupera a Sessão atual
   cSessao := sys_session();

   -- Verifica se Usuario Selecionou Pelo Menos 1 Titulo a Baixar
   If (Select count(*) From [(ss029)] where session = cSessao) < 1 Then
      raise '[[ATENÇÃO. Voce Precisa Selecionar Algum Titulo Para Efetuar a Baixa. Verifique !!]]';
   End If;

   -- teste para validar c/c e caixa (vieram 3 parametros)
   if in_ak_cc      is not null and
      in_fa1_caixa  is not null and
      in_fcg_cartao is not null then
      raise '[[ATENÇÃO. Voce deve escolher sómente uma forma de pagamento (Caixa, Banco ou Cartão). Verifique !!]]';
   end if;

   -- teste para validar c/c, caixa e cartao de credito - vieram sem informação
   if in_ak_cc      is null and
      in_fa1_caixa  is null and
      in_fcg_cartao is null and
      in_iTpBaixa   <> 3    then
      raise '[[ATENÇÃO. Voce deve selecionar pelo menos uma forma de pagamento. Verifique !!]]';
   end if;

   -- testes para c/c
   if in_ak_cc is not null then
      -- Verifica se veio alguma informação em caixa ou cartao
      if in_fa1_caixa  > 0 or
         in_fcg_cartao > 0 then
         raise '[[ATENÇÃO. Não é possivel efetuar Baixa de mais de uma conta de Pagamento. Verifique !!]]';
      end if;

      -- Pagamento em dinheiro
      if in_iFormaPg = 2 then
         raise '[[ATENÇÃO. Forma de Pagamento em Dinheiro Somente Disponivel para Pagamento via Caixa. Verifique !!]]';
      end if;

   -- testes para caixa
   elsif in_fa1_caixa > 0 then
      -- Verifica se veio alguma informação em banco ou cartao
      if in_ak_cc is not null or
         in_fcg_cartao > 0 then
         raise '[[ATENÇÃO. Não é possivel efetuar Baixa de mais de uma conta de Pagamento. Verifique !!]]';
      end if;

      -- Meio Eletronico
      if in_iformaPg = 0 then
         raise '[[ATENÇÃO. A Forma de Pagamento Eletronico não está disponivel para pagamento por Caixa. Verifique !!]]';
      end if;

      -- Pagamento em Cheque
      if in_iformaPg = 1 then
         raise '[[ATENÇÃO. A Forma de Pagamento por Cheque não está disponivel para pagamento por Caixa. Verifique !!]]';
      end if;

   -- testes para cartao de credito
   elsif in_fcg_cartao > 0 then
      -- verifica se veio alguma informação de conta ou caixa
      if in_ak_cc is not null or
         in_fa1_caixa > 0 then
         raise '[[ATENÇÃO. Não é possivel efetuar Baixa de mais de uma conta de Pagamento. Verifique !!]]';
      end if;

      -- Pagamento em Cheque
      if in_iformaPg = 1 then
         raise '[[ATENÇÃO. A Forma de Pagamento por Cheque não está disponivel para pagamento por Cartão de Crédito. Verifique !!]]';
      end if;

      -- Pagamento em Dinheiro
      if in_iformaPg = 2 then
         raise '[[ATENÇÃO. A Forma de Pagamento em Dinheiro não está disponivel para pagamento por Cartão de Crédito. Verifique !!]]';
      end if;
   end if;

   -- Define a Data a utilizar na Baixa
   dDataBaixa := sys_getdatabase####???();
   If in_iTipoData = 3 Then
      dDataBaixa := sys_getdatesys####???();
   End If;

   -- Insere a Baixa nos registros Selecionados que tenha Conta Corrente e Saldo
   Insert Into [(fcl)] (ao_codtit,         ao_parce,         fcl_motivo,   ak_cc,       fa1_caixa,    fcg_cartao,
                        fcl_data,          fcl_valor,        fcl_docto,    fcl_forma,
                        fcl_item)
                 Select [(sao)].ao_codtit, [(sao)].ao_parce, in_iTpBaixa,  in_ak_cc,    in_fa1_caixa, in_fcg_cartao,
                        Min(Case When in_iTipoData = 1 Then ao_venctoreal Else dDataBaixa End),
                                           Min(ao_saldo),    'BAIXA LOTE', in_iFormaPg, Coalesce(Max([(fcl)].fcl_item), 0) + 1
                   From [(sao)]
                   Join [(ss029)]
                     On [(sao)].recno = [(ss029)].recfile
                    And [(ss029)].session = cSessao
              Left Join [(fcl)]
                     On [(sao)].ao_codtit = [(fcl)].ao_codtit
                    And [(sao)].ao_parce  = [(fcl)].ao_parce
                  Where [(sao)].ao_saldo  > 0.00
               Group By [(sao)].ao_codtit, [(sao)].ao_parce;

   -- Exclui os registros processados da Seleção
   Delete From [(ss029)]
    Where [(ss029)].session = cSessao;

   out_res := 1;
End;
$$ language 'plpgsql';