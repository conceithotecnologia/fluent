   DFe - Transferir para o Fiscal

	@author    Gabriel Montes
	@date      04/07/2019
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
CREATE OR REPLACE FUNCTION mc_01251####???
(out out_res   integer)
As $$
Declare
   iRecno integer;
BEGIN

   select count(recno) 
     into iRecno
     from [(ss029)] 
    where session = sys_session();

   if iRecno = 0 then
      raise '[[ATENÇÃO. Nenhum empresa marcada para processamento!]]';
   elsif iRecno > 1 then
      raise '[[ATENÇÃO. Apenas uma empresa deve ser processada por vez!]]';
   end if;

   update [(a6d)] a6d
      set a6d_status = 1
     from [(ss029)] ss029
    where ss029.recfile = a6d.recno;

END;
$$
  LANGUAGE 'plpgsql' VOLATILE;