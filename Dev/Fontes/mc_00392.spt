Create or Replace Function mc_00392####???
( out out_res Integer )
As $$
Declare

   cSessao      [(ss027)].session%type;     -- Sessao ativa no banco
   iCliente     [(lom)].a1_codcli%type;
   rRec         Record;
   vemp         varchar;
   vdiv         varchar(1);
Begin
   out_res := 0;
   cSessao := sys_session();

   -- Recupera a chave da tabela e a natureza financeira
   iCliente  := sys_042integer2####???('LOP', 'a1_codcli');

   -- Só executa o processamento depois que o usuário informar a natureza
   If iCliente is not Null Then

      -- deleta sessão se existir
      delete from [(ss100)]
       where session  = cSessao
         and codtable = 'SFM';

      -- Recupera o dados no cabeçalho da compra
      vemp := '';
      vdiv := '';
      for rrec in (
          select a1_codcli
            from [(sa1)]
           where a1_matriz = iCliente)
      loop
        vemp := vemp || vdiv || rrec.a1_codcli;
        vdiv := ',';
      end loop;

      if (vemp = '') then
         vemp = 'null';
      end if;

      -- Gera o filtro com os dados do cabeçalho do título
      insert into [(ss100)](session, codtable, stmt)
           values (cSessao, 'SFM', '([sfm.sfj_pessoa]) in (' || vemp ||')');

   End If;

   out_res := 1;
end;
$$ language 'plpgsql'
