/**
   Retorna o número recuperado da sequência

	@author    Gabriel Montes
	@date      09/10/2015 14:16:00
	@trigger
   @param   in_seqname Nome da sequencia da qual a numeração será recuperada
   @return  Retorna o número recuperado da sequência

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION sys_seq####???(in in_seqname varchar)
  RETURNS integer AS
$$
Declare
   iret   integer;
   rSeq  record;
   cmd   text;
BEGIN
   
   select modo
     into rSeq
     from ss006
    where seqname = upper(in_seqname);
   
   if not found then
      raise '[[Sequência "%" não encontrada no banco de dados.]]',in_seqname;
   end if;
   
   cmd := 'select nextval(''' || lower(in_seqname);
      
   if rSeq.modo = 1 then
      cmd := cmd || sys_emp####???() || '000';
   elsif rSeq.modo = 2 then
      cmd := cmd || sys_empfil####???();      
   end if;
   
   cmd := cmd || 'seq''::regclass);';
   
   execute cmd into iret;
   
   return iret;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;