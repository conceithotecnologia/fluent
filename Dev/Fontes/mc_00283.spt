/**
   Trigger Da Tabela A04 - Itens da OS

	@author    Fabio Carvalho
	@date      01/12/2010
	@trigger   A04 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   
*/
Create or Replace Function mc_00283####???()
Returns trigger
As $$
Declare
-- {Variáveis de uso interno}
   r        record;
Begin
   if tg_op = 'DELETE' then
      return old;
   else
      if tg_op = 'INSERT' then
         -- Obtem informações do cabeçalho
         select a03_etapa
           into r
           from [(a03)]
          where a03_os = new.a03_os;

         if r.a03_etapa <> 0 then
            if r.a03_etapa > 1 then
               raise '[[Não é possível inserir serviços na OS % na etapa atual.]]', new.a03_os;
            end if;
         end if;
      end if;      

      new.a04_valor := round(new.a04_qtd * new.a04_unitario,2);
      return new;
   end if;
End;
$$ language plpgsql;