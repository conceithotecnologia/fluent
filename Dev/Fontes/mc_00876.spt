Create or Replace Function mc_00876####???()
Returns trigger As
$$
Declare
Begin
   if tg_op <> 'DELETE' then
      -- Valida a data de Morte
      if new.ci6_morte < new.ci6_nascimento then
         raise '[[ATENÇÃO. A Data da morte do animal é inferior a data de nascimento. Verifique!]]';
      end if;

      return new;
   end if;

   return old;
End;
$$
language plpgsql;