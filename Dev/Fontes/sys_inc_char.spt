Create or Replace Function sys_inc_char
(  in in_string varchar(1),
   out xText varchar(1)
)
as $$
Begin
   if in_string in ('0', '1', '2', '3', '4', '5', '6', '7', '8') then
      xText:= (in_string::integer + 1)::varchar(1);
   elsif in_string = '9' then
      xText:= 'A';
   else
      xText:= Chr(Ascii(in_string) + 1);
   end if; 

End;
$$
language plpgsql;