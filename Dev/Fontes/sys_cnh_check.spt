/**
   Checa se a CNH informada é valido

   Autor	   Ricardo Gonçalves / Fabio Carvalho
   Data     24/07/2009 21:00:02

   Retorno  0 - Código Ok
            1 - Composição inválida
            2 - CNH inválido

	Histórico
	------------------------------------------------------------------
*/
Create or Replace Function sys_cnh_check(
   in cnh varchar(11))
Returns integer
as $$
Declare
   -- Variaveis
   i        INT4;           -- Contador
   iProd    INT4;           -- Somatório
   iMult    INT4;           -- Fator
   iDigito  numeric;        -- Digito verificador calculado
   vcnh     varchar(11);
   iDec     int4;
Begin
   if not cnh ~ '[0-9]{11}' then
      return 1;
   end if;

   -- *****************************************************
   -- Verifica a validade do cnh
   -- *****************************************************

   -- primeiro digito
   iDigito := 0;
   iProd   := 0;
   vcnh    := substring(cnh, 1, 9);
   iDec    := 0;

   for i in 1..9 loop
      iProd := iProd + substring(vcnh, i, 1)::int2 * (10 - i);
   end loop;

   iDigito := iProd % 11;

   IF iDigito >= 10 THEN
      iDigito := 0;
      iDec    := 2;
   END IF;

   vcnh := vcnh || iDigito::varchar(1);
   -- segundo digito
   iProd := 0;
   FOR i IN 1..9 LOOP
      iProd := iProd + substring(vcnh, i, 1)::int2 * i;
   END LOOP;

--   iDigito := iProd % 11 - iDec;
--   IF iDigito >= 10 THEN
--      iDigito := 0;
--   end if;
--   iDigito := iDigito - iDec;
   if (iProd % 11) - iDec < 0 then
      iDigito := 11 + (iProd % 11) - iDec;
   elsif (iProd % 11) - iDec >= 0 then
      iDigito := (iProd % 11) - iDec;
   end if;
   
   if iDigito > 9 then
      iDigito := 0;
   end if;        

   vcnh := vcnh || iDigito::varchar(1);

   if vcnh <> cnh then
      return 2;
   end if;

   return 0;
End;
$$ language 'plpgsql';