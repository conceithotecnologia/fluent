/**
   Validaçao de Email 

	@author    Fábio Carvalho
	@date      02/06/2006 14:37:47
   @function    
   
   @param in_email e-mail que será validado
   
   @return 1 - email válido / 0 - email inválido
   
	Histórico
	---------------------------------------------------------------------------------------------------------------------
	02/06/2006 20:56:51 v1.0  Fabio Carvalho   
	  [+] Validação do Email passado como parametro                 
*/
Create or Replace Function sys_email(
   in in_email varchar(200))
Returns integer As 
$$
Begin
   if (in_email ~ '^[a-zA-Z0-9][a-zA-Z0-9\._-]+@([a-zA-Z0-9\._-]+\.)[a-zA-Z0-9]{2}') then
      Return 1;
   end if;

   return 0;
End;
$$ language 'plpgsql';