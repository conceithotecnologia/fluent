/**
   Processamento entrada DF-e

	@author    Ricardo Gonçalves
	@date      27/03/2019
	@trigger   A0X B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_01219####???()
Returns integer AS 
$$
Declare
   csession varchar;
Begin
   csession := sys_session();

   -- O Jurandy mandou fixar o ambiente de produção de modo que o 
   -- usuário não possa selecionar o ambiente de homologação
   insert into [(a0w)] 
         (a0w_tpamb, a0w_cnpjcpf, sfj_pessoa)
   select 1,  p.sfh_cnpj,  p.sfj_pessoa
     from [(a0v)] p 
          join [(ss029)] s
            on s.session = csession
           and s.codtable = 'A0V'
           and p.recno = s.recfile;

   update [(a0w)] x
      set a0w_status = 1
     from [(a0v)] p, [(ss029)] s
    where s.session = csession
      and s.codtable = 'A0V'
      and p.recno = s.recfile
      and x.a0w_status = 0;

   delete
     from [(ss029)]
    where session = csession
      and codtable = 'A0V';

   perform sys_msg####???(1, 'Solicitação enviada a SEFAZ');

   Return 1;
End;
$$ language plpgsql;