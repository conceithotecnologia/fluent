Create or Replace Function sys_data_extenso
( in  dData      date,
  out Out_Result varchar )
As $$
Begin
   Out_result := sys_strzero(sys_day(dData),2)   ||  ' de ' || 
                 sys_monthname(sys_month(dData)) ||  ' de ' || 
                 sys_year(dData)                 ||  '.';
End;
$$ Language plpgsql;
   
