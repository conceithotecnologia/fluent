/**
   Processamento de feriados regionais

	@author    Ricardo Gonçalves
	@date      03/02/2016 20:35
	@trigger   SZA B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00916####???() 
Returns trigger As 
$$
Declare
   vzb_descri [(szb)].zb_descri%type;
Begin
   if tg_op <> 'DELETE' then       
      select zb_descri
        into vzb_descri
        from [(szb)]
       where zb_codfer = to_char(new.za_codfer, 'DDMM');
      
      if FOUND then
         raise '[[O feriado "% - %" está cadastrado no calendário de feriados nacionais com a descrição "%"]]', 
            mask_00004(new.za_codfer), new.za_descri, vzb_descri;
      end if;
      
      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;