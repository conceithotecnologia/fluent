Create or Replace Function mc_00043####???
() Returns trigger
As $$
Declare
-- {Parametros de entrada}
-- {Parametros de saьda}
-- {Variрveis para cursores}
-- {Variрveis de uso interno}
   iReq         [(sck)].ck_req%type;
   nVerba       [(sav)].av_verba%type;
Begin
   Select av_verba Into nVerba
     From [(sav)]
    Where av_ccusto = new.av_ccusto
      and av_chkverba = 1;

   If nVerba is not null and nVerba <= 0 Then
      raise '[[Nсo hр verbas para requisiушes no centro de custos %.]]', new.av_ccusto;
   End If;

   Select ck_req Into iReq
     From [(sck)]
    Where av_ccusto = new.av_ccusto
      And sd4_apelido   = new.sd4_apelido;

   If iReq is null Then
      raise '[[Usuрrio % nсo pertence ao centro de custos %.]]', new.sd4_apelido, new.av_ccusto;
   End If;

   If iReq = 0 Then
      raise '[[Usuрrio % nсo tem permissсo para fazer requisiушes pelo centro de custos %.]]', new.sd4_apelido, new.av_ccusto;
   End If;

   Return new;
End;
$$ language plpgsql;