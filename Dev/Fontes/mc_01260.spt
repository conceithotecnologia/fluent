	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_01260####???
( Out out_res Integer )
As $$
Declare
   rRec  record;
   bOk   boolean;
begin
   --Verifica se Há registros marcados
   if not exists (select 1
                    from [(ss029)]
                   where session = sys_session()) then
      raise '[[ATENÇÃO. Não há registros marcados para retransmissão. Verifique!]]';
   end if;

   --verifica se Há Registros Processados
   if exists (select 1
                from [(ss029)] a
                join [(fsl)]   b on b.recno = a.recfile
               where a.session = sys_session()
                 and b.fsl_status = 4) then
      raise '[[ATENÇÃO. Não há registros marcados já processados com sucesso. Verifique!]]';
   end if;

   --verifica se Ha 1 ou mais registros marcados
   if exists (select 1
                from [(ss029)]
               where session = sys_session()) then
      raise '[[ATENÇÃO. Não há registros marcados para processamento. Verifique!]]';
   end if;

   --Flag se processada
   bOk := False;

   for rRec in (select a.recfile
                  from [(ss029)] a
                  join [(fsl)]   b on b.recno = a.recfile
                 where a.session    = sys_session()
                   and a.codform    = 'FSL_01'
                   and a.codtable   = 'FSL'
                   and b.fsl_status = 3) loop
       --Altera para Carregando
       update [(fsl)] set fsl_status = 0 where recno = rRec.recfile;

       --Altera para em Processamento
       update [(fsl)] set fsl_status = 1 where recno = rRec.recfile;

       bOk := True;
   end loop;

   if bOk then
      perform sys_msg####???(1,'Alteração Efetuada com Sucesso');
   end if;

   out_res := 1;
End;
$$ language 'plpgsql';
