/**
   Valida avaliação de serviço

	@author    Gabriel Montes
	@date      14/02/2014 14:39:00
	@trigger   FDT B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00791####???()
  RETURNS trigger AS
$$
DECLARE
   r           record;
   irec_aval   integer;
BEGIN
   
   if tg_op = 'DELETE' then
      irec_aval := old.fdr_recno;
   else
      irec_aval := new.fdr_recno;
   end if;
   
   select fdr_estado
     into r
     from [(fdr)]
    where recno = irec_aval;
   
   if tg_op = 'DELETE' then
      
      if r.fdr_estado = 5 then
         raise '[[Itens não podem ser excluídos de avaliações encerradas.]]';
      else
      
      end if;
         
      return old;
   else
      
      if not exists (select 1
                       from [(sew)] sew 
                      where sew.z2_coduni = new.z2_coduni 
                        and sew.sew_servico = new.sew_servico) 
      then
         raise '[[Unidade de medida inválida para o serviço requisitado.]]';
      end if;
      
      if r.fdr_estado = 5 then
            raise '[[Itens não podem ser inseridos ou alterados de avaliações encerradas.]]';
      end if;
      
      new.fdt_tot := new.fdt_qtd * new.fdt_unit;
      
      return new;
   end if;  
   
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;