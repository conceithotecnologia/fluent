/**
   Gatilho da tela da tabela SC6

	@author    Fabio Carvalho
	@date      31/08/2016
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function scr_00033####???()
Returns integer
As
$$
Declare
   iOs       [(sc6)].a03_os%type;
   iCliente  [(sc6)].a1_codcli%type;
   iNatureza [(sc6)].f1_codnat%type;
   sObserva  [(sc6)].sc6_observa%type;
Begin
   --recupera o codigo do cliente da OS (Cabeçalho)
   iOs := sys_042integer2####???('SC6', 'a03_os');

   select a1_codcli
     into iCliente
     from [(a03)]
    where a03_os = iOs;

   perform sys_042integer_wr####???('SC6', 'a1_codcli', iCliente);

   --Recupera a Natureza do arquivo de Parametros
   select os_nat_pgto
     into iNatureza
     from [(fcc)]
    limit 1;

   perform sys_042integer_wr####???('SC6', 'f1_codnat', iNatureza);

   --propoe a Descrição do Recebimento
   perform sys_042string_wr####???('SC6', 'sc6_observa', 'Valor Recebido da OS Nº ' || iOs);

   Return 1;
End;
$$
language plpgsql;