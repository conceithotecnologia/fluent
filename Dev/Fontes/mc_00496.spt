/**
   Validação de cadastro de solicitante

	@author    Gabriel Montes
	@date      14/05/2013 11:05:00
	@trigger   A3X B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00496####???()
Returns trigger
as
$$
Declare
r record;
Begin
   IF(tg_op = 'DELETE') THEN
      if not exists(
         select 1
           from [(a3x)] a3x
          where a3x.a3w_recno = old.a3w_recno
            and a3x.sfj_pessoa != old.sfj_pessoa) then
         
        update [(a3w)] a3w
           set a3w_estado = 0
         where a3w.recno = old.a3w_recno;
      end if; 
      
      RETURN old;
   else
      
      perform ck_00009####???(a2k.coduser)
         from [(a2k)] a2k 
        where a2k.sfj_pessoa = new.sfj_pessoa;

      if not exists(
         select 1
           from [(a3x)] a3x
          where a3x.a3w_recno = new.a3w_recno
            and a3x.sfj_pessoa != new.sfj_pessoa
            and a3x_situacao = 1) 
      then
         update [(a3w)] a3w
            set a3w_estado = 0
          where a3w.recno = new.a3w_recno;
      end if; 

      if(tg_op = 'INSERT') then
         if exists(
            select 1
              from [(a3x)] a3x 
             where a3x.sfj_pessoa = new.sfj_pessoa
               and a3x.a3w_recno = new.a3w_recno)
         then
            raise '[[O usuário "%" já está cadastrado neste grupo como supervisor.]]',new.sfj_pessoa;
         end if;
      end if;   
      
      return new;  
   end if;
END;
$$ 
Language plpgsql;