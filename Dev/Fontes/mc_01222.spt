/**
   Tratamento da requisição para serviço DF-e

	@author    Ricardo Gonçalves
	@date      01/04/2019
	@trigger   A0W B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_01222####???()
Returns trigger AS $$
Declare
   r        record;
   e        ender;
   abortar  boolean;
Begin
   if tg_op = 'DELETE' then
      return old;
   end if;

   abortar := False;

   -- Verifica se já existe alguma consulta em andamento
   if tg_op = 'INSERT' then
      
      select recno
        into r
        from [(a0w)]
       where sfj_pessoa = new.sfj_pessoa
         and a0w_status < 2
         and a0w_tpamb = new.a0w_tpamb
         and recno <> new.recno;

      if Found then
         abortar := True;
      end if;

      -- Verifica a validade do certificado digital
      if ck_00019####???(new.sfj_pessoa) = 0 then
         abortar := True;
      end if;

      if abortar and r.recno is not null  then
         return null;
      end if;

      select sfj_ultnsu
        into new.a0w_ultnsu
        from [(sfj)]
       where sfj_pessoa = new.sfj_pessoa;

      e := mc_00208####???(new.sfj_pessoa, mc_00205####???(new.sfj_pessoa));
      new.a0w_cuf := e.cuf;
      new.a0w_uf := e.uf;
   else
      if old.a0w_status < 2 and new.a0w_status > 1 then
         select count(*)
           into new.a0w_doctot
           from [(a0x)]
          where a0w_recno = new.recno; 
      end if;
   end if;

   Return new;
End;
$$ language plpgsql;