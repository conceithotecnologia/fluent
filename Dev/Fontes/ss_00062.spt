/**
   Atualiza sufixo do formulário

	@author    Ricardo Gonçalves
	@date      08/06/2015
	@trigger   SS095 A IU

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function ss_00062####???() 
Returns trigger AS 
$$
Begin
   
   -- Permissão especial (manual)
   if new.obj_id is null then
      -- Ativação da permissão
      if new.perm_status = 1 then
         if new.perm_scope = 1 and 
            not exists(
               select 1
                 from [(ss087)]
                where perm_id = new.perm_id)
         then
            raise '[[Associe a permissão % a um ou mais sistemas antes de ativá-la.]]', new.perm_id;
         end if;            
      end if;   
   end if;
      
   
   Return new;
   
End;
$$ LANGUAGE plpgsql;
