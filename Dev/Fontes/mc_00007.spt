/**
   Retorno Situação CTe

	@author    Wagner Mobile Costa
	@date      14/07/2014
	@function

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00007####???()
returns integer
As $$
Declare
   r           record;
begin
   for r in (
      select s29.recfile, a50.recno, a50.cstat
        from [(ss029)] s29
        join [(a50)] a50 on a50.codtable = s29.codtable and a50.a50_recno = s29.recfile
        where s29.session = sys_session() and s29.codform = 'TRA_A1P' and s29.codtable = 'A1P')
      loop

		-- Atualiza o cabeçalho do cte para consultar situação
      update [(a50)]
         set a50_estado = 1, a50_acao = 30
       Where recno = r.recno;
   End Loop;

   -- apaga dados da sessao
   delete
     from [(ss029)]
    where session = sys_session()
      and codform = 'TRA_A1P'
      and codtable = 'A1P';

   return 1;
end;
$$ language 'plpgsql'