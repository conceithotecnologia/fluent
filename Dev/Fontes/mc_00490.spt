/**
   Validação de cadastro de aprovador

	@author    Gabriel Montes
	@date      14/05/2013 11:05:00
	@trigger   A3q B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00490####???()
Returns trigger
as
$$
Declare
Begin
   IF(tg_op = 'DELETE') THEN
      RETURN old;
   end if;
          
      if (tg_op = 'INSERT') then
         new.a3Q_estado = 0;
      end if;
          
      if not exists(
         select 1
           from [(a3t)] a3t
               join [(a3q)] a3q
                 on a3t.a3q_recno = new.recno
                and a3t_situacao = 1) then      
         if new.a3q_estado = 1 then
            raise '[[O grupo só pode ser "ativo" depois que um aprovador "ativo" for adicionado.]]';
         end if;
   end if;
      
   return new; 
          
END;
$$ 
Language plpgsql;