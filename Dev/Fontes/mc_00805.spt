   @author    Fabio Carvalho
   @date      12/07/2013
   @trigger   A55 B IUD

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   02/09/2013 16:10:00  v2 Ricardo Gonçalves
      [-] Inclusão da validação da chave da NF-e informada no conhecimento.

*/
Create or Replace Function mc_00805####???()
Returns trigger
As
$$
Declare
   vDV      varchar(1);
   vChave   varchar(43);
begin
   if tg_op = 'DELETE' then
      return old;
   end if;

   -- Dados do Cte
   if new.codtable = 'A1Q' then
      select  a1q.a1q_chave, a1q.a1q_suframa
        into  new.chave, new.pin
        from [(a1q)] a1q
       where a1q.recno = new.a55_recno;
       
      if length(new.chave) <> 44 then
         raise '[[Chave "%" da NF-e referenciada no CT-e % deve ter 44 caracteres.]]', new.chave, new.a50_recno;
      end if;
      
      -- Verifica se a chave da NF-e é válida
      if ck_00010(new.chave) = 0 then
         raise '[[Chave "%" da NF-e referenciada no CT-e % é inválida.]]', new.chave, new.a50_recno;
      end if;
   end if;
   return new;
End;
$$
language plpgsql;