| Descrição: Muda a condição de edição dos campos 'FC1_CC2' e 'FA1_CAIXA' da tabela FC1                                                          |
| -------------------------------------------------------------------------------------------------------------------------------- |
| Parametros                                                                                                                       |
|  [Entrada]······················································································································ |
             sys_session(): Id da sessão ativa - IP / Empresa / Filial
==================================================================================================================================*/
create or replace function sys_whenfc1####???
(  out out_res integer )
as $$
declare
   iFc1_tipo   integer; -- Tipo da Operação;
begin
   out_res:= 0;
   -- Busca o tipo de operação na tabela de sessão
   select sys_042integer####???('fc1_tipo') into iFc1_tipo;
   -- Atualiza tabela de sessão habilitando ou desabilitando campos
   update [(ss042)]
      set enabled = 0
    where session = sys_session()
      and Columnname in ('fc1_cc2', 'fa1_caixa');
   if iFc1_tipo = 3 then
      update [(ss042)]
         set enabled = 1
       where session = sys_session()
         and Columnname = 'fc1_cc2';
   elsif iFc1_tipo = 4 then
      update [(ss042)]
         set enabled = 1
       where session = sys_session()
         and Columnname = 'fa1_caixa';
   end if;
   out_res:= 1;
end;
$$ language plpgsql;
