/**
   Retorna situação do orçamento de vendas

   Autor	Ricardo Gonçalves
   Data  25/01/2006 13:59:19
   
   Parâmetros
   ------------------------------------------------------------------
   in_sa5_codorc Código do orçamento ao qual se deseja consultar a situção

   Retorno
   ------------------------------------------------------------------
   0 - Em Aberto, 1 - Enviado ao Cliente, 2 - Aprovado ParciaLmente,
   3 - Aprovado,  4 - Reprovado

	Histórico
	------------------------------------------------------------------
		dd/mm/aaaa hh:mm:ss	vx.x	author
*/
Create or Replace Function mc_00104####???(
   in  in_sa5_codorc integer,
   in  in_sa5_validade date)
Returns integer
As
$$
Declare
   iCount      integer;
   iAprov      integer;
   iAbert      integer;
   out_status  integer;
Begin
   -- Recupera a quantidade de itens aprovados, reprovados e total no orçamento
   select sum(sys_iif(sa6_status = 1, 1, 0)),
          sum(sys_iif(sa6_status = 2, 1, 0)),
          count(sa6_status) as total
     Into iAbert, iAprov, iCount
     from [(sa6)]
    where sa5_codorc = in_sa5_codorc
    group by sa5_codorc;

   -- Retorna pedido em aberto por padrão
   out_status := 1;

   if iAprov = iCount then
      out_status := 3;
   elsif iAprov > 0 and iAprov <> iCount then
      out_status := 2;
   elsif current_date > in_sa5_validade then
      out_status := 4;
   end if;

   return out_status;
End;
$$ LANGUAGE plpgsql;