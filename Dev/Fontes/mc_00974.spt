/**
   Financeiro - Remoção de título a pagar de remessa

	@author    Gabriel Montes
	@date      27/09/2016
	@function

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00974####???( )
Returns integer
As $$
Declare
   r     record;
begin
   
   select sao.ao_codtit, sao.recno, sao.frq_remessa
     into r
     from [(sao)] sao
         join [(ss029)] ss029
           on sao.recno = ss029.recfile
    where session = sys_session()
      and ss029.codtable = 'SAO';
   
   update [(sao)] sao
      set frq_remessa = null
    where sao.recno = r.recno;

   -- Apaga Marcação
   delete
     from [(ss029)]
    where session = sys_session()
      and codtable = 'SAO';
   
   perform sys_log####???('SAO',r.recno, format('Título %s removido do arquivo de remessa %s.',r.ao_codtit,r.frq_remessa));
   
   return 1;
end;
$$ language 'plpgsql'