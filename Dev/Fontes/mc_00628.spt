/**
   Obtem o próximo número de documento para série informada

   @author    Ricardo Gonçalves
   @date      19/09/2013
   @trigger   

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00628####???(
   in in_serie varchar(3))
Returns integer AS
$$
Declare
   inum  integer;
Begin
   inum := 1;
   
   -- Procura por uma numeração disponível
   select min(a40_numero)
     into inum
     from [(a40)]
    where at_serie = in_serie; 

    if inum is not null then
      -- Apaga número utilizado
      delete 
        from [(a40)]
       where at_serie = in_serie
         and a40_numero = inum;
   else
      -- Obtem a numeração da série
      select coalesce(at_curr, at_numini, 1) 
        into inum
        from [(sat)]
       where at_serie = in_serie;
      
      -- Atualiza a série
      update [(sat)] 
         set at_curr = inum + 1 
       where at_serie = in_serie;
   end if;
   
   return inum;
End;
$$
language 'plpgsql';