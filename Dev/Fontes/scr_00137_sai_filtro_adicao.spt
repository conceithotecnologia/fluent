/**
   Filtro Dinamico da Tabela de Declaracao de Importação - Adições

   @author    Fabio Carvalho
   @date      19/03/2012 16:48:00
   @function

   Histórico   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function scr_00137_sai_filtro_adicao####???
( out out_res Integer )
As $$
Declare
   cSessao     [(ss027)].session%type;     -- Sessao ativa no banco
   isai_serial [(sai)].sai_serial%type;
   irecno      [(sai)].recno%type;
Begin
   out_res := 0;
   cSessao := sys_session();
   irecno := sys_042integer2####???('SAI', 'recno');
   -- Recupera a chave da tabela
   select sai_serial into isai_serial
     from [(sai)] 
    where recno = irecno;

   -- deleta sessão se existir
   delete from [(ss100)]
    where session  = cSessao
      and codtable = 'SAJ';

   -- Gera o filtro
   insert into [(ss100)](session, codtable, stmt)
                 values (cSessao, 'SAJ', '([saj.sai_serial]) = ' || isai_serial );

   out_res := 1;
end;
$$ language 'plpgsql'
