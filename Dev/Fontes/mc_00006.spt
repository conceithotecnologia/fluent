/**
   Retorno Situação NFSe

	@author    Wagner Mobile Costa
	@date      19/07/2014
	@function

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00006####???()
returns integer
As $$
Declare
   r record;
begin   
   for r in (
      select s29.recfile
        from [(ss029)] s29             
       where s29.session  = sys_session()
         and s29.codform  = 'NFS_NFK'
         and s29.codtable = 'NFK')
      loop

      perform mc_setflag####???('nfk', r.recfile);
                  
      --- Atualiza o cabeçalho do NFSe para consultar situação
      update [(nfk)]
         set nfk_estado = 1, nfk_status_fat = sys_iif(nfk_status_fat = 0, 1, nfk_status_fat),
             nfk_acao   = 30
       Where recno = r.recfile;
       
      perform mc_delflag####???('nfk', r.recfile);
   End Loop;

   -- apaga dados da sessao
   delete
     from [(ss029)]
    where session = sys_session()
      and codform = 'NFS_NFK'
      and codtable = 'NFK';

   return 1;
end;
$$ language 'plpgsql'