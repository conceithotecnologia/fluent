/**
   Trigger da Tabela CI9 - Racas que Canil Cria

	@author    Fabio Carvalho
	@date      15/12/2014
	@trigger   CI9

	Histórico  After
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00878####???()
Returns trigger As
$$
Declare
Begin
   if tg_op <> 'DELETE' then

      --verifica se Ha Mais de 1 raça como principal
      if (select count(*)
            from [(ci9)]
           where ci5_canil = new.ci5_canil
             and ci9_principal = 1) > 1 then
         raise '[[ATENÇÃO. Defina somente uma raça como principal do Canil. Verifique!]]';
      end if;

      return new;
   end if;

   return old;
End;
$$
language plpgsql;