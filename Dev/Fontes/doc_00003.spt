/**
   Fomrulário de índice da documentação

	@author    Ricardo Gonçalves
	@date      17/12/2014 09:27
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function doc_00003()
Returns text As
$$
Declare      
   html        text;
Begin      
   html := doc_00001();
   html := html || '<div id="menu">';
   html := html || '<ul id="indice">';   
   html := html || '<li id="is"><a href="#s">Sistemas</a></li>';
   html := html || '<li id="it"><a href="#t">Tabelas</a></li>';
   html := html || '<li id="ir"><a href="#r">Rotinas</a></li>';
   html := html || '<li id="if"><a href="#f">Formulários</a></li>';   
   html := html || '</ul>';   
   html := html || '</div>';
   
   html := html || '<div id="s">';   
   html := html || '<h1>Sistemas</h1>';   
   html := html || '<p><a href="#indice">Voltar ao índice</a>';
   html := html || '</div>';
   
   html := html || '<div id="t">';   
   html := html || '<h1>Tabelas</h1>';   
   html := html || doc_00004();
   html := html || '<p><a href="#indice">Voltar ao índice</a>';
   html := html || '</div>';
   
   html := html || '<div id="r">';   
   html := html || '<h1>Rotinas</h1>';   
   html := html || '<p><a href="#indice">Voltar ao índice</a>';
   html := html || '</div>';
   
   html := html || '<div id="f">';   
   html := html || '<h1>Formulários</h1>';   
   html := html || '<p><a href="#indice">Voltar ao índice</a>';
   html := html || '</div>';
   
   html := html || doc_00002();
   
   perform doc_00006('index.html', html);
   perform doc_00006('estilo.css', doc_00007());
   
   Return html;
End;
$$
language plpgsql;