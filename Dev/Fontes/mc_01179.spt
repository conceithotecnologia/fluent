/**
   Estorno de matéria-prima do documento de produção

	@author  Ricardo Gonçalves
	@date    02/10/2018
	@trigger B60 A IUD
  
	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01179####???()
Returns trigger As
$$
Declare
   isdi_amostra   [(sdi)].sdi_amostra%type;
   isdi_situacao  [(sdi)].sdi_situacao%type;
Begin
   if tg_op = 'DELETE' then
      isdi_amostra := old.sdi_amostra;
   else
      isdi_amostra := new.sdi_amostra;
   end if;

   isdi_situacao := 2;

   if exists(
      select 1
        from [(b60)] 
       where sdi_amostra = isdi_amostra)
   then
      if not exists(
         select 1
         from [(b60)] 
         where sdi_amostra = isdi_amostra
            and b60_apontado = 0)
      then
         if not exists(
            select 1
            from [(b60)]
            where sdi_amostra = isdi_amostra
               and b60_aprovado = 0)
         then
            isdi_situacao := 1;
         end if;
      else
         isdi_situacao := 0;
      end if;
   end if;

   update [(sdi)]
      set sdi_situacao = isdi_situacao
    where sdi_amostra = isdi_amostra;

   return null;
End;
$$
language 'plpgsql'