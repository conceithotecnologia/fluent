Create or Replace Function mc_00626####???
() Returns trigger
As $$
Begin
   if tg_op = 'UPDATE' then
      -- Enquanto aguarda não tem data
      if new.lob_status <= 1 then
         new.lob_datastatus := null;
      -- Se foi 1-Aprovada ou 2-Reprovado e a data não for preenchida assume a hora da operação
      elsif new.lob_datastatus is null and new.lob_status > 1 then
         new.lob_datastatus := current_timestamp;
      end if;
   end if;

   if tg_op = 'DELETE' then
      return old;
   else
      return new;
   end if;
End;
$$ language plpgsql;