/**
   Pré-validação na guia de detalhamento dos saldos de inventário

	@author    Ricardo Gonçalves
	@date      23/03/2018
	@trigger   A4Y B UID

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01128####???()
Returns trigger As
$$
Declare
   r        record;   
   fsd3_qtd [(sd3)].sd3_qtd%type;
Begin  
   if tg_op = 'DELETE' then
      return old;   
   end if;
   
   if tg_op = 'INSERT' then
      new.a4y_qtd := new.a4y_qtd_ant;
   end if;
   
   select a.b1_codpro, a.z2_coduni, p.b1_nome, p.z2_coduni coduni
     into r
     from [(a4u)] a
          join [(sb1)] p
            on p.b1_codpro = a.b1_codpro
    where a.recno = new.a4u_recno;    
      
   -- Validando movimentação do lote
   perform mc_00091####???(r.b1_codpro, new.sd3_lote);
   
   select sys_iif(r.z2_coduni = r.coduni, sd3_qtd, sd3_sqtd)
     into fsd3_qtd
     from [(sd3)]
    where sd3_lote = new.sd3_lote;
    
   if new.a4y_qtd > fsd3_qtd then
      if tg_op = 'INSERT' then
         new.a4y_qtd := fsd3_qtd;
      else      
         raise '[[O quantidade limite inventáriada para o lote % é de % %]]', new.sd3_lote, fsd3_qtd, r.z2_coduni;
      end if;
   end if;   
   
   return new;
End;
$$
language plpgsql;