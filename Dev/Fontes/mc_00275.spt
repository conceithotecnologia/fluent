/**
   Geração do digito da chave da Nfe

   @author    Wagner Mobile Costa
   @date      16/08/2010 18:20:00
   @function

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00275(in_chave varchar(43))
Returns varchar(1)
As
$$
Declare
   fpeso   varchar(43);
   i       integer;
   j       integer;
   fReturn integer;
Begin
   fPeso:= '4329876543298765432987654329876543298765432';

   j := 0;
   fReturn := 0;
   for i in 1..43 loop
      j := j + Substr(in_chave, i, 1)::integer * Substr(fpeso, i, 1)::integer;

      if (j % 11) < 2 then
         fReturn := 0;
      else
         fReturn := 11 - (j % 11);
       end if;
   end loop;

   return fReturn;
End;
$$
language plpgsql;