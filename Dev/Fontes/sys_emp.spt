CREATE OR REPLACE FUNCTION sys_emp####???()
  RETURNS varchar AS
$$
Declare
   ret   varchar;
BEGIN
   select codemp
     into ret
     from [(ss027)]
    where session = sys_session();
   
   return ret;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;