/**
   Registro de Log

	@author    Ricardo Gonçalves
	@date      21/07/2014 13:13:01
	@trigger   
   
   @in_codtable alias da tabela para a qual o log está sendo gerado
   @in_recno registro da tabela para o qual o log está sendo gerado
   @in_historico texto que será registrado na ocorrência
   
   @return Código do log gerado

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
create or replace function sys_log####???
(  in in_codtable varchar,
   in in_recno integer,
   in in_log text )
Returns integer AS 
$$
Declare
   r        record;
   ilog     integer;
   cmd      text;
   vtable   varchar;
   valias   varchar;
Begin
   ilog := 0;
   
   select modo
     into r
     from ss009
    where codtable = upper(in_codtable); 
   
   if not Found then
      raise '[[O log "%" para tabela "%", registro "%" não pode ser registrado porque o alias não foi localizado na tabela ss009]]',
         in_log, in_codtable, in_recno;
   end if;
   
   if r.modo = 1 then
      valias := 'a4b';
      vtable := 'a4b' || sys_emp####???() || '000';
   elsif r.modo = 2 then
      valias := 'a4c';
      vtable := 'a4c'|| sys_empfil####???();      
   else
      raise '[[Não é possível usar a rotina sys_log para gerar logs para tabelas padrão]]';
   end if;

   ilog := nextval((vtable||'_recno_seq')::regclass);   
   
   cmd := format('insert into %s (codtable, %s_recno, %s_historico, recno)', vtable, valias, valias);

   cmd := cmd || format(' values (%s, %s, %s, %s);', 
      quote_literal(upper(in_codtable)), in_recno, quote_literal(in_log), ilog);

   execute cmd;
   
   Return ilog;
End;
$$ language plpgsql;
