/**
   trigger tabela A1N - Coleta

	@author    Fabio Carvalho
	@date      02/04/2011
	@trigger   BEFORE

	@param

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00316####???()
Returns trigger
As $$
Declare
   cSessao    Varchar(35);

Begin
   cSessao := sys_session();
   if tg_op <> 'DELETE' then
      if new.sa1_remetente = new.sa1_destinatario and 
         new.se2_remetente = new.se2_destinatario then
         raise '[[ATENÇÃO. Não é possivel o Remetente ser Igual ao Destinatario. Verifique!]]';
      end if;
      return new;
   end if;
   return old;

End;
$$ language plpgsql;