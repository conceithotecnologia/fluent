Create or Replace Function sys_make_date
(  in in_ano integer, in_mes integer, out outres date) AS $$
Begin
    outres := (in_ano::varchar(4) || '-' || in_mes::varchar(2) || '-01')::date;
End;
$$ LANGUAGE plpgsql;
