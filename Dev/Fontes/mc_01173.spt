Create or Replace Function mc_01173####???()
Returns trigger As
$$
BEGIN
   if tg_op = 'DELETE' then
      return old;
   end if;

   if tg_op = 'INSERT' then
      -- Preenchendo o próximo número de amostra
      select coalesce(max(e01_amostra), 0) + 1
        into new.e01_amostra
        from [(e01)]
       where sd1_docto = new.sd1_docto; 

      new.e01_qtd := 0; 
   end if;

   return new;
END
$$
language 'plpgsql';