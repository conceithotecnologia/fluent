/*============================================================================
  Empresa..: MultCont Informática
  Descrição: Alimenta tabela com registro que devem ser notificados quando da
             assinatura eletronica.
  Autor....: Ricardo Gonçalves
  Data.....: 20/02/2006 16:54:46

  Parametro        Descrição
  ---------------------------------------------------------------------------
  in in_signature | Assinatura
  in in_tablename | Nome da tabela que será atualizada
  in in_recno     | Registro que será notificado, dentro da tabela acima
  in in_tg_op     | Operação - vide parâmetro TG_OP
  out outres      | 1 - sucesso
  ============================================================================*/
Create or Replace Function sys_sign_notify####???
(  in in_signature      varchar(25),
   in in_tablename      varchar(10),
   in in_recno          integer,
   in in_tg_op          varchar,
  out outres            integer )
AS
$$
Begin
   outres:= 1;

   if in_tg_op = 'DELETE' then
      Delete
        From [(szr)]
       where szs_signature = in_signature
         and szr_tablename = in_tablename
         and szr_recno = in_recno;

      return;
   end if;

   -- Verifica se o item da assinatura existe
   select recno
     into outres
     from [(szr)]
    where szs_signature = in_signature
      and szr_tablename = in_tablename
      and szr_recno = in_recno;

   if outres is not null then
      Return;
   end if;

   -- Cria assinatura
   insert into [(szr)] (szs_signature, szr_tablename, szr_recno)
        values         (in_signature,  in_tablename,  in_recno);
End;
$$
language plpgsql;