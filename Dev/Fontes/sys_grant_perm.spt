Create or Replace Function sys_grant_perm####???(
   in in_sys integer,
   in in_role integer,
   in in_perm varchar(25) )
Returns integer
AS
$$
Begin
   Begin
      insert into [(ss098)] (codsis, role_id, perm_id)
           values           (in_sys, in_role, in_perm);
   Exception
      when unique_violation then
   end;

   return 1;
End;
$$
language plpgsql;