Create or Replace Function mc_00842####???()
Returns trigger 
As $$
Declare
   iIdade integer;
Begin
  if tg_op <> 'DELETE' then
      -- Validação da idade dos Colaboradores 
         iIdade := extract (year from (age (current_date,new.f22_dtnasc)));
         
         if iIdade < 14 and new.codtable = 'A2K' then
            raise '[[ATENÇÃO. Não podem ser cadastrados colaboradores menores de 14 anos.]]';
         end if;
   end if; 
   Return New;
End;
$$ language plpgsql;