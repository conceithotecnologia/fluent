/**
   Bloqueia edição se o adiantamento já tiver sido baixado

	@author    Gabriel Montes
	@date      30/10/2014 10:04:00
	@function

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function scr_00098####???( out outres integer )
As $$
Declare
   iStatus       Integer;
   iCaixa        Integer;
   cConta        varchar(25);
begin
   
   iStatus := sys_042integer2####???('SC6','sc6_status');
   iCaixa  := sys_042integer2####???('SC6','fa1_caixa');
   cConta  := sys_042string2####???('SC6','ak_cc');
   
   If iCaixa Is Null And cConta Is Not Null Then
      -- Atualiza o arquivo de sessão desabilitando o campo Código do Caixa
      Update [(ss042)]
         Set enabled = 0
       Where session = sys_session()
         And Columnname = 'fa1_caixa';
   End If;
   
   If cConta Is Null And iCaixa Is Not Null Then
      -- Atualiza o arquivo de sessão desabilitando o campo Conta Bancária
      Update [(ss042)]
         Set enabled = 0
       Where session = sys_session()
         And Columnname = 'ak_cc';
   End If;
   
   If cConta Is Null And iCaixa Is Null Then
         -- Atualiza o arquivo de sessão desabilitando o campo Conta Bancária
      Update [(ss042)]
         Set enabled = 1
       Where session = sys_session()
         And Columnname in ('ak_cc','fa1_caixa');
   end if;

   if iStatus > 1 then
      update [(ss042)]
         set enabled = 0
       where codtable = 'SC6'
         and session = sys_session();
   
      Update [(ss042)]
         Set enabled = 1
       Where session = sys_session()
         And Columnname in ('sc6_data','sc6_observa');
   end if;
   
   
End;
$$ language plpgsql;