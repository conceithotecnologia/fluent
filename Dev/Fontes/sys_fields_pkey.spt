Create or Replace Function sys_fields_pkey
(  in in_codtable varchar(20),
   out outres varchar(255) )
AS $$
Declare
   xCur        RefCursor;
   vcolumnname varchar(30);
   ifields     integer;
Begin
   Open xCur for
   select columnname
     from [(ss012)]
    where codtable = in_codtable and primarykey = 1
    order by order_;
    
   fetch xCur into vcolumnname;
   ifields:= 0;
   outres:= ''; 
   while FOUND loop
      -- Conta o nЩmero de campos da chave
      ifields:= ifields + 1;
       
      If iFields > 1 then
         outres:= outres || ',';
      end if;
      outres:= outres || vcolumnname;
         
      fetch xCur into vcolumnname;
   end loop;

   close xCur;
End;
$$ LANGUAGE plpgsql;