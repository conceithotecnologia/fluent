/**
   DF-e - Confirmação da Escrituração de XML's

	@author    Jurandy da Silva Costa
	@date      31/10/2019
	@trigger   

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   
*/
Create or Replace Function mc_01274####???()
Returns integer AS 
$$
Declare
   cSession varchar;
   cUsuario varchar;
Begin
   cSession := sys_session();
   cUsuario := sys_user####???();
   -- Atualiza os registros selecionados com os dados do usuário que confirmou a escrituração
   Update [(a5u)] Set a5u_usuario = cUsuario, a5u_escriturou = now()
    Where a5u_usuario IS NULL
      And recno In (Select recfile From  [(ss029)] Where codtable = 'A5U' And session = cSession);
   -- Limpa a seleção de registros para atualização
   delete
     from [(ss029)]
    where session = csession
      and codtable = 'A5U';

   perform sys_msg####???(1, 'Escrituração confirmada;');

   Return 1;
End;
$$ language plpgsql;