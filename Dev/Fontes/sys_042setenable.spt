Create or Replace Function sys_042SetEnable####???
(  in aColumnname varchar(30),
   in aEnabled boolean)
Returns void
As
$$
Declare
   iEnabled  integer;
Begin
   iEnabled := 0;

   if aEnabled then
      iEnabled := 1;
   end if;

   Update [(ss042)]
      Set Enabled = iEnabled
    where session = sys_session()
      and columnname = lower(aColumnname);
End
$$
language plpgsql;