/**
   Atualiza Status Manifestação do Destinatario

	@author    Fabio Carvalho
	@date      24/01/2019
	@trigger

   @Parâmetro
   in  pStatus -  Status da NFE
   out out_res    integer

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso


*/
Create or Replace Function mc_01199####???(
 in  pStatus integer,
 out out_res integer)
AS $$
DECLARE
   cSessao  varchar;
Begin
   cSessao := sys_session();

   -- Verifica se usuario marcou algum item errado
   if not exists (Select 1
                    from [(ss029)] s29
                   Where s29.session  = cSessao
                     and s29.codtable = 'NG5'
                     and s29.codform  = 'NG5_01') Then
       raise '[[ATENÇÃO. Não foi selecionado nenhum item !. Favor verificar.]]';
   end if;

   --Altera a Situação da Manifestação
   update [(ng5)] set ng5_cSitConf = pStatus
     from [(ss029)] s29
     Join [(ng5)]   ng5 on ng5.recno = s29.recfile
    where s29.recfile  = ng5.recno
      and s29.codtable = 'NG5';

   out_res := 1;
End
$$
language 'plpgsql';