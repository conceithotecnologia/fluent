Create or Replace Function sys_left(TEXT, INTEGER) RETURNS TEXT AS '
Declare

-- {Parametros de entrada}
   in_cString      Alias For $1;
   in_nEsquerda    Alias For $2;

Begin
    Return Substr(in_cString, 1, in_nEsquerda);
End;
' LANGUAGE 'plpgsql';

