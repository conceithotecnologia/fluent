Create or Replace Function mc_00183####???
() Returns trigger
As $$
Declare
   xRec  Record;
Begin
   if tg_op = 'DELETE' then
      if mc_getflag####???('LOM', old.lom_id) > 0 then
         Return old;
      end if;

      Select lor.lor_status, lor.lor_lote
        into xRec
        From [(lor)] lor
             join [(lom)] lom on lom.lor_lote = lor.lor_lote
       Where lom.lom_id = old.lom_id;

      if xRec.lor_status = 2 then
         raise '[[A reserva % já esta com lote % encerrado e não é possivel exclusão.]]', old.lom_id, xRec.lor_lote;
      end if;
      return old;
   else
      if mc_getflag####???('LOM', new.lom_id) > 0 then
         Return new;
      end if;

      Select lor_status
        into xRec
        From [(lor)] lor
             join [(lom)] lom on lom.lor_lote = lor.lor_lote
       Where lom.lom_id = new.lom_id;

      if xRec.lor_status = 2 then
         raise '[[A reserva % já esta com lote encerrado e não possivel inclusão/alteração.]]',new.lom_id;
      end if;
      return new;
   end if;
End;
$$ language plpgsql;