/**
   Nº de Série Produção Modelo 2

	@author  Ricardo Gonçalves
	@date    31/03/2014 20:52
	@trigger A5V A IUD
	
	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso   
*/
Create or Replace Function mc_00542####???()
Returns trigger As
$$
Declare
   bChecar  boolean;
Begin   
   if tg_op != 'INSERT' then
      update [(a27)]
         set a27_qtdnumser = a27_qtdnumser - 1
       where recno = old.a27_recno;
       
       bChecar := tg_op = 'DELETE';
      
      if not bChecar and tg_op = 'UPDATE' then
         bChecar := new.a44_numser != old.a44_numser;
      end if;
      
      if bChecar then
         -- Tenta excluir número serial informado manualmente
         delete
           from [(a44)]
          where a44_numser = old.a44_numser
            and a43_recno is null;
            
         if not Found then               
            -- Libera número de série para uso futuro
            update [(a44)]
               set a44_estado = 1, a44_estado = 0, a44_historico = format('Nº de série liberado pela produção modelo 2. nº %s.', old.a27_recno)
             where a44_numser = old.a44_numser;
         end if;
      end if;
   end if;
   
   if tg_op = 'DELETE' then
      return old;
   else   
      update [(a27)]
         set a27_qtdnumser = a27_qtdnumser + 1
       where recno = new.a27_recno;
       
      return new;
   end if;
End
$$
language plpgsql;