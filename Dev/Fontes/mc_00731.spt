--      if not exists(
--         select 1
--           from [(sfj)]
--          where sfj_pessoa = new.sfj_pessoa
--            and sfj_tipo = 1)
--      then
--         raise '[[Informações de pessoa física devem ser preenchidas somente para pessoas de tipo física.]]';
--      end if;
      
      update [(sfj)] set sfj_tipo = 1 where sfj_pessoa = new.sfj_pessoa;
      
      Return New;
   else
       -- altera o tipo de PJ para PE
      update [(sfj)]
      set sfj_tipo = 3
      where sfj_pessoa = old.sfj_pessoa;

       Return Old;
   end if;
End;
$$ language plpgsql;