create or replace function mc_00845####???()
returns trigger
As $$
BEGIN
   if tg_op = 'DELETE' THEN
      return old;
   else
      if exists(
         select 1
           from [(f14)] f14
           join [(f00)] f00
             on f14.sfj_pessoa = f00.sfj_pessoa
          where f00.sfj_pessoa = new.sfj_pessoa 
            and f14_dtdemis is not null)
      then
         raise '[[Não foi possível concluir a alteração pois o colaborador não encontra-se ativo]]';
      end if;
   end if;
   return new;
end;
$$ language plpgsql;
   
   