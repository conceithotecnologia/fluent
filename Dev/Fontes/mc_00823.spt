/**
   Trigger da Tabela LPF - Debitos c/c de terceiros

	@author    Fabio Carvalho
	@date      11/06/2014
	@trigger   LPF Before

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_00823####???()
Returns trigger
As
$$
Begin
   if    tg_op = 'INSERT' then
      new.lpf_saldo := new.lpf_valor;
      return new;
   elsif tg_op = 'DELETE' then
      if exists (select 1
                   from [(lpi)]
                  where lpf_recno = old.recno) then
         raise '[[ATENÇÃO. Não é possivel excluir movimento com baixas. Verifique!]]';
         
      elsif old.codtable <> 'LPF' 
        and mc_getflag####???(old.codtable, old.recno_origem) <> 1 then
         raise '[[ATENÇÃO. Não é possivel excluir movimento com origem de outra tabela. Verifique!]]';   
      end if;


      return old;
   else
      select new.lpf_valor - coalesce(sum(lpi_valor),0)
        into new.lpf_saldo
        from [(lpi)]
       where lpf_recno = new.recno;
       
       --Status do Pagamento
       if new.lpf_saldo = 0 then
          new.lpf_status = 2;
       elsif new.lpf_saldo <> new.lpf_valor then
          new.lpf_status = 1;
       else
          new.lpf_status = 0;
       end if;
   end if;

   return new;
End;
$$ language plpgsql;