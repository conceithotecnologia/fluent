/**
   Retorna o conteudo do arquivo de sessão de tela de campos Big Int

   @author    Wagner Mobile Costa
   @date      13/08/2010 19:50:00
   @function

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   30/08/2010 10:29:34  v2    Ricardo Gonçalves.
      [*] Eliminação da rotina sys_042bigint2.
*/
create or replace function sys_042bigint####???
(  in pCodTable   varchar(30),
      pColumnname varchar(30),
   out iBigInt integer )
as $$
begin
   select bigint_
     into iBigInt
     from [(ss042)]
    where session    = sys_session()
      and CodTable   = upper(pCodTable)
      and columnname = lower(pColumnname);
end;
$$ language plpgsql;