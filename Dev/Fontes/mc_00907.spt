/**
   Atualiza arquivos relacionados a edição de itens da nota de saida em SAJ

	@author    Gabriel Montes
	@date      10/11/2015 10:47:00
	@trigger   A4F A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_00907####???() 
Returns trigger As 
$$
Declare
   iNumPed  integer;
Begin
      
   if tg_op = 'DELETE' then
      
      if exists(select 1 
                  from [(a5z)]
                 where sgg_item = old.sgg_recno)
      then
         update [(a5z)] a5z
            set a5z_estado = 1
          where a5z.sgg_item = old.sgg_recno;
   
         perform mc_setflag####???('saf', old.saf_codped);
         
         update [(saf)]
            set saf_etapas = 2,
                saf_status = 3
          where saf_codped = old.saf_codped;
         
         perform mc_getflag####???('saf', old.saf_codped);
      
      end if;
      return old;
   else
   
      return new;
   end if;
   
End;
$$ LANGUAGE plpgsql;