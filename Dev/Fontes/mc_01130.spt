/**
   Pré-validação na guia de detalhamento dos saldos de inventário

	@author    Ricardo Gonçalves
	@date      23/03/2018
	@trigger   A4Z B UID

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01130####???()
Returns trigger As
$$
Declare
   r  record;
Begin  
   if tg_op = 'DELETE' then
      return old;   
   end if;
   
   if tg_op = 'INSERT' then
      new.a4z_qtd := new.a4z_qtd_ant;
      
      select a.b1_codpro, a.a4u_data, b.b1_nome
        into r
        from [(a4u)] a
             join [(sb1)] b
               on b.b1_codpro = a.b1_codpro
       where a.recno = new.a4u_recno; 
      
      if ck_00018####???(r.b1_codpro, r.a4u_data) <> 1 then
         raise '[[O controle de endereçamento para o material % - % não está habilitado em %!]]',
            r.b1_codpro, r.b1_nome, r.a4u_data;
      end if;
   end if;

   return new;
End;
$$
language plpgsql;