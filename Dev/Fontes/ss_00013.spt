/**
   Processamento antes da alteração do contexto

	@author    Ricardo Gonçalves
	@date      03/07/2009 20:55:05
	@trigger   SS096 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function ss_00013####???()
Returns trigger
As
$$
Declare
   bUpd     boolean;
Begin
   if tg_op = 'DELETE' then
      if old.default_ = 1 then
         update [(ss096)]
            set default_ = 1
          where coduser = old.coduser
            and recno in 
               (select max(recno)
                  from [(ss096)]
                 where coduser = old.coduser);
      end if;
   else
      bUpd := new.default_ = 1;

      if tg_op = 'UPDATE' then
         bUpd := bUpd and old.default_ = 0;
      end if;

      if bUpd then
         update [(ss096)]
            set default_ = 0
          where coduser = new.coduser
            and recno <> new.recno;

         --if not found then
         --   raise '[[ % ]]', new.default_;
         --end if;
      end if;
   end if;

   return null;
End;
$$
language plpgsql;