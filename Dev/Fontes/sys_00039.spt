/**
   Obtem a última excessão gerada por um usuário

	@author    Ricardo Gonçalves
	@date      01/06/2018
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION sys_00039####???(
   in_user varchar)
RETURNS integer AS
$$
Declare
   ierro integer;
Begin   
   select recno
     into ierro
     from [(a5t)]
    where U_I = in_user
    order by recno desc
    limit 1; 
       
   return ierro;
End;
$$
language plpgsql;