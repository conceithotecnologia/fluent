/**
   Trigger da Tabela CID - Proprietarios de Canil

	@author    Fabio Carvalho
	@date      15/12/2014
	@trigger   CI9

	Histórico  After
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00862####???()
Returns trigger As
$$
Declare
Begin
   if tg_op <> 'DELETE' then
      -- Testa de % de propriedade na Data é superior a 100%
      if (select coalesce(sum(a.cid_perc),0)
            from [(cid)] a
           where max(a.cid_data) = new.cid_data) > 100 then
         raise 'ATENÇÃO. A % da propriedade do canil não pode ser superior a 100%. Verifique!]]';
      end if;

      return new;
   end if;

   return old;
End;
$$
language plpgsql;