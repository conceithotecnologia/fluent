/**
   Validação de cadastro de comprador

	@author    Gabriel Montes
	@date      14/05/2013 11:05:00
	@trigger   A3p B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00489####???()
Returns trigger
as
$$
Declare
Begin
   IF(tg_op = 'DELETE') THEN
      RETURN old;
   end if;
   
      if (tg_op = 'INSERT') then
         new.a3p_estado = 0;
      end if;
      
      if not exists(
         select 1
           from [(a3s)] a3s
               join [(a3p)] a3p
                 on a3s.a3p_recno = new.recno
                and a3s_situacao = 1) then      
         if new.a3p_estado = 1 then
            raise '[[O grupo só pode ser "ativo" depois que um comprador "ativo" for adicionado.]]';
         end if;
      end if;
   return new; 
    
END;
$$ 
Language plpgsql;