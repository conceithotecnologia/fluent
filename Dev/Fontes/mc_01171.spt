Create or Replace Function mc_01171####???()
Returns integer As
$$
Declare
   r        record;
   csessao  varchar;
BEGIN
   csessao := sys_session();

   for r in (
      select sdg_roteiro, s.recno
        from [(sdg)] a
             join [(ss029)] s
               on s.session = csessao
              and s.codtable = 'SDG'
              and s.recfile = a.recno)
   loop
      begin
         perform mc_01172####???(r.sdg_roteiro);

         delete 
           from [(ss029)]
          where recno = r.recno ;
      exception
         when raise_exception then
      end;
   end loop;

   return 1;
END
$$
language 'plpgsql';