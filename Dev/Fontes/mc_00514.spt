/**
   Validação das informações do contrato.

	@author    Gabriel Montes
	@date      02/04/2015 14:17:00
	@trigger   fdn B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
CREATE OR REPLACE FUNCTION mc_00514####???()
  RETURNS trigger AS
$$
Declare
   
BEGIN
   if tg_op <> 'DELETE' then
      if tg_op = 'INSERT' then
         new.fdn_estado := 1;
         new.fdn_valor  := new.fdn_valoratu;
      else
         -- Verifica se o contrato pode entrar em vigência
         if old.fdn_estado = 1 and new.fdn_estado = 2 then
            -- Verifica assinatura
            if new.fdn_assinatura is null then
               raise '[[O contrato % não pode entrar em vigor porque a data de assinatura não foi informada.]]', new.fdn_num_contrato;
            end if;

         end if;

         if new.fdn_estado < old.fdn_estado then
            raise '[[O contrato % não pode sofrer alterações porque está encerrado.]]', new.fdn_num_contrato;
         end if;

      end if;

      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;