/**
   Valida cadastro de ativos por contrato

	@author    Gabriel Montes
	@date      14/04/2014 09:44:00
	@trigger   FDM B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
CREATE OR REPLACE FUNCTION mc_00810####???()
  RETURNS trigger AS
$$
Declare
   
BEGIN
   if tg_op <> 'DELETE' then
      if tg_op = 'INSERT' then
         
         -- Não permite adicionar um Ativo que esteja ativo em outro contrato
         if exists(
            select 1
              from [(fdm)] fdm
             where fdm.sdo_id = new.sdo_id
               and fdm_estado = 1
               and fdm.fdn_num_contrato <> new.fdn_num_contrato
         )
         then
            raise '[[Equipamento "%" já cadastrado em outro contrato em vigência.]]',new.b1_codpro;
         end if;
         
      else
      
         -- Não permite alterar o status de um Ativo para ativo que esteja ativo em outro contrato
         if new.fdm_estado = 1 then
            if exists(
               select 1
                 from [(fdm)] fdm
                where fdm.sdo_id = new.sdo_id
                  and fdm_estado = 1
            )
            then
               raise '[[Equipamento "%" já cadastrado em outro contrato em vigência.]]',new.b1_codpro;
            end if;
         end if;
         
      end if;

      return new;
   else
      raise '[[Caso o contrato do Equipamento não esteja em vigor, inative o Equipamento.]]';
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;