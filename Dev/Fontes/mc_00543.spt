Create or Replace Function mc_00543####???
() Returns trigger
As $$
Declare
-- {Variáveis de uso interno}

Begin
   If tg_op = 'DELETE' Then
      -- Exclui lançamentos no Fluxo de Caixa
      Delete From [(fc2)]
       Where fc2_origem = 'FPO'
         And fc2_recno  = old.recno;
      Return old;
   Else
      Return new;
   End If;
End;
$$ language 'plpgsql';