/**
   Retorna a descrição do serviço informado

	@author    Ricardo Gonçalves
	@date      04/11/2017
	@trigger

   @param in_servico nome do serviço que precisa ser ativado

   @return descrição do serviço

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION sys_servicename####???(
   in in_servico integer)
  RETURNS varchar AS
$$
Declare
   servicename varchar;
BEGIN
   select descricao
     into servicename
     from ss132
    where id = in_servico;

   return coalesce(servicename, format('SERVIÇO "%s" NÃO LOCALIZADO!!!!', in_servico));
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;