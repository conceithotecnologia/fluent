/**
   Trata inserção de índices

	@author    Ricardo Gonçalves
	@date      11/02/2012 15:32:49
	@trigger   SS013 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION ss_00046####???()
  RETURNS trigger AS
$$
Declare
   aindex      varchar array[2];
   bUpd        boolean;
BEGIN
   if tg_op <> 'DELETE' then
      if new.codtable_src = 'SS013' then
         new.recno_src := new.recno;
      end if;
      
      bUpd := tg_op = 'INSERT';
      
      if not bUpd then
         bUpd := new.fields <> old.fields;
      end if;

      if bUpd then
         -- Formata campo em retorna descrição
         aindex := ss_00047(new.codtable, new.fields);

         new.fields := aindex[1];         
         new.descript := coalesce(new.descript, aindex[2]);
      end if;

      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;