   Rotina.: mc_00105() - Gera código de produto para GDCP inserido na tabela SBK
   ----------------------------------------------------------------------------------------------
   Sintaxe: mc_00105()
   ----------------------------------------------------------------------------------------------
   Params.:
   ----------------------------------------------------------------------------------------------
   Retorno: Trigger
   ----------------------------------------------------------------------------------------------
   Descri.:
   ============================================================================================== */
create or replace function mc_00105####???
() Returns trigger 
AS
$$
Declare
   xCur           RefCursor; -- Cursor que obtem os dados de informações complementares
   cArquivo       text;
   ccodemp        [(ss027)].codemp%type;
   ifilial        [(ss063)].filial%type;
   cComando       text;
   iSeek          integer;
Begin
   if tg_op = 'INSERT' then
      new.sbk_gdcppro:= 'GDCP-' || sys_strzero(new.sbk_serial, 5);
   end if;

   -- Obtem o código da empresa e filial que compõe o nome do arquivo
    Select codemp, filial
      Into ccodemp, ifilial
     From [(ss027)]
    Where session = sys_session();

   -- Compõe o nome do arquivo
   cArquivo:= quote_ident('sbz'||ccodemp||sys_strzero(ifilial, 3));

   cComando:= 
   'Select count(recno) '||
     'from ' || cArquivo || ' ' ||
    'where sbh_base = ' ||  new.sbk_gdcp[1][1];

   Open xCur For Execute cComando;

   Fetch xCur Into iSeek;
   Close xCur;

   if iSeek = 0 then
      raise '[[Não é possível criar produtos baseados em modelos incompletos.]]';
   end if;

   return new;
End;
$$ language plpgsql;