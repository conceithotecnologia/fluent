/**
   Geração do Arquivo de Retorno do SAP

	@author    Jurandy da Silva Costa
	@date      31/01/2018
	@function

   @param in_chave - Chave de acesso da Nfe
   @param in_proto - Protocolo de autorização da Nfe


	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_01099####???()
Returns integer
As $$
Declare
   iQuantos   integer;
   rRec_Nfa   record;
   rRec_Fsl   record;

begin
   -- Verifica se Selecinou algum registro na tabela ss029
   select coalesce(count(*),0)
     into iQuantos
     From [(ss029)]
    where session = sys_session();
   if iQuantos <> 1 then
      raise '[[Para gerar o arquivo de retorno para o SAP é necessário selecionar apenas um registro.]]';
   end if;

   select fsl.fsl_nota, fsl.fsl_serie, fsl.fsl_nome, fsl.recno
     into rRec_Fsl
    from [(fsl)] fsl
    join [(ss029)] ss029 
      on ss029.recfile  = fsl.recno 
     and ss029.codtable = 'FSL'
   where ss029.session = sys_session();

   -- Nessa versão só é possível obter retorno de Nfe ou Cancelamento
   if left(rRec_Fsl.fsl_nome, 4) not in ('NFE-', 'CAN-') then
      raise '[[ATENÇÃO. Só é possível gerar arquivo de retorno de NFe ou de Cancelamento.]]';   
   end if;   
   -- Se usuário escolheu um registro que não tem a nota ou a série
   if Coalesce(rRec_Fsl.fsl_nota, 0) = 0 then
      raise '[[O registro selecionado não tem um número de nota fiscal válido. Favor verificar.]]';
   end if;
   if Coalesce(rRec_Fsl.fsl_serie, '') = '' then
      raise '[[O registro selecionado não tem uma série de nota fiscal válida. Favor verificar.]]';
   end if;
   -- Busca a nota fiscal e séria na tabela NFA
   select nfa_estado, xmotivo, dhrecbto, nfa_serial, cstat, nprot, chnfe
     into rRec_Nfa
     from [(nfa)]
    where ide_nnf   = rRec_Fsl.fsl_nota
      and ide_serie = rRec_Fsl.fsl_serie;
   -- Se não encontrou a nota informada retorna erro para o usuário
   if rRec_Nfa.nfa_serial Is Null then
      raise '[[ATENÇÃO. Não foi encontrada nota transmitida com o número % e série %. Favor verificar.]]', rRec_Fsl.fsl_nota, rRec_Fsl.fsl_serie;
   end if;
   -- Se encontrou a nota na tabela NFA atualiza a FSL de acordo com o Status
   -- Altera o status da FSL para 2 para permitir a gravação do arquivo
   if left(rRec_Fsl.fsl_nome, 4) in ('NFE-', 'CAN-') then
		  update [(fsl)]
		     set fsl_status = 2 
		   where recno = rRec_Fsl.recno;
   end if;
   -- Se for registro de Nota Fiscal         
   if left(rRec_Fsl.fsl_nome, 4) = 'NFE-' then
 	   -- Se houve falha na transmissão da nota
	   if rRec_Nfa.nfa_estado = 2  then
         update [(fsl)]
		      set fsl_status = 3, 
			       nfa_serial = rRec_Nfa.nfa_serial,
			       fsl_coderro = rRec_Nfa.cstat,
			       fsl_ocorre = rRec_Nfa.xmotivo,
			       fsl_dhtransmi = rRec_Nfa.dhrecbto
		    where recno = rRec_Fsl.recno;
	   end if;   
      -- Se houve sucesso na transmissão da nota mas falha na atualização da NFA
      if rRec_Nfa.nfa_estado = 3 and (rRec_Nfa.cstat not in (100,101,135) or rRec_Nfa.nprot = 0) then
		update [(fsl)]
		   set fsl_status = 3, 
			    nfa_serial = rRec_Nfa.nfa_serial,
			    fsl_coderro = rRec_Nfa.cstat,
			    fsl_ocorre = 'Falha na atualização da NFe após a transmissão. Favor contatar o suporte.',
			    fsl_dhtransmi = rRec_Nfa.dhrecbto
		 where recno = rRec_Fsl.recno;
	  end if;
	  -- Se houve sucesso na transmissão da nota e sucesso na atualização da NFA
	  if rRec_Nfa.nfa_estado = 3 and rRec_Nfa.cstat = 100 and rRec_Nfa.nprot > 0 then
		  update [(fsl)]
		     set fsl_status = 4, 
			      nfa_serial = rRec_Nfa.nfa_serial,
			      fsl_chave = rRec_Nfa.chnfe,               
               fsl_proto = rRec_Nfa.nprot,
			      fsl_coderro = rRec_Nfa.cstat,
			      fsl_ocorre = rRec_Nfa.xmotivo,
			      fsl_dhtransmi = rRec_Nfa.dhrecbto
		   where recno = rRec_Fsl.recno;
	  end if;
   elsif left(rRec_Fsl.fsl_nome, 4) = 'CAN-' then  -- Se for registro de Nota Fiscal
	  if rRec_Nfa.cstat in (101,135) then 
		  update [(fsl)]
		     set fsl_status = 4, 
			      nfa_serial = rRec_Nfa.nfa_serial,
			      fsl_chave = rRec_Nfa.chnfe,               
               fsl_proto = rRec_Nfa.nprot,
			      fsl_coderro = rRec_Nfa.cstat,
			      fsl_ocorre = rRec_Nfa.xmotivo,
			      fsl_dhtransmi = rRec_Nfa.dhrecbto
		   where recno = rRec_Fsl.recno;
	  end if;   
   end if;
   return 1;
end;
$$ language 'plpgsql'