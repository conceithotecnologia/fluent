/**
   Validação de entrada de notas fiscais complementares

	@author    Gabriel Montes
	@date      04/11/2014 17:52:00
	@trigger   FPA B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00868####???() 
Returns trigger As 
$$
Declare
-- {Variáveis de uso interno}

Begin
   If tg_op <> 'DELETE' then
      select ac_codforn
        from [(sal)]
        into new.ac_codforn
       where al_serial = new.al_serial;
       
      if new.a2f_codigo <> '55' and new.a2f_codigo <> '57' then
         new.sal_nfechave := null;
      elsif new.fpa_nfechave is null or length(new.fpa_nfechave) <> 44 then
         raise '[[ATENÇÃO. Chave de acesso da NF-e deve ser informada corretamente.]]';
      end if;
      
   end if;
   
   if tg_op <> 'INSERT' then
      if old.fpa_status <> 1 then
         raise '[[ATENÇÃO. Este documento não pode ser alterado porque está Encerrado ou Cancelado.]].';
      end if;
   end if;
   
   if tg_op = 'DELETE' then
      return old;
   end if;
   
   Return new;
End;
$$ language plpgsql;