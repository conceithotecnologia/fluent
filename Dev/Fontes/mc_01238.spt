  /**
     Recalcula Abastecimentos

  	@author    Fabio Carvalho
  	@date      21/05/2019
  	@trigger

          @return 1 - sucesso / 0 falha

  	Histórico
  	---------------------------------------------------------------------------------------------------------------------
     Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

  */
  Create or Replace Function mc_01238####???
  ( Out out_res    Integer )
  As $$
  Declare
  -- {Variáveis para cursores}
     rRec   Record;
  -- {Variáveis de uso interno}
  Begin
     --Verifica se Houve Algum registro Marcado
     if not exists(
        select 1
          from [(ss029)] s29
          join [(dia)]   dia on s29.recfile = dia.recno
         where s29.session  = sys_session()
           and s29.codtable = 'DIA') then
        raise '[[ATENÇÃO. Não foi marcado nenhum registro para processamento. Verifique!!]]';
     end if;

     --Verifica se Houve Algum Registro Marcado como Não Processado
     if exists(
        select 1
          from [(ss029)] s29
          join [(dia)]   dia on s29.recfile = dia.recno
         where s29.session    = sys_session()
           and s29.codtable   = 'DIA'
           and dia.dia_status = 0) then
        raise '[[ATENÇÃO. Foi marcado algum registro com Status de Não Processado. Verifique!!]]';
     end if;

     --Cursor Para Modificar os Status
     for rRec in (select s29.recfile
                    from [(ss029)] s29
                    join [(dia)]   dia on s29.recfile = dia.recno
                   where s29.session    = sys_session()
                     and s29.codtable   = 'DIA'
                     and dia.dia_status = 1) loop

         -- Altera Para Não Processado
         update [(dia)] set dia_status = 0 where recno = rRec.recfile;

         --Altera Para Processado
         update [(dia)] set dia_status = 1 where recno = rRec.recfile;

     end loop;

     out_res := 1;
  End;
  $$ language 'plpgsql';
