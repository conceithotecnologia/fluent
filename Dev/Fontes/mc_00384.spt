/**
   Atualização do valor dos serviços

	@author    Wagner Mobile Costa
	@date      18/08/2012 12:30:00
	@trigger   NFZ A

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00384####???
() Returns trigger
As $$
Declare
   irecno [(nfz)].nfk_recno%type;
Begin
   if tg_op = 'DELETE' then
       irecno := old.nfk_recno;
   else
       irecno := new.nfk_recno;
   end if;

   if mc_getflag####???('NFK', irecno) = 0 then 
      -- Permite alterações somente no estagio de digitação
      if (select nfk_status_fat from [(nfk)]
           where recno = iRecno) = 1 then
           raise '[[ATENÇÃO. A nota fiscal está pronta para faturamento e não pode ter as naturezas alteradas.]]';
      end if;
   
      -- Atualiza o valor dos serviços prestados
      update [(nfk)] 
         set nfk_vr_servicos = coalesce((select sum(nfz_valor) from [(nfz)] where nfk_recno = irecno), 0)
       where nfk_recno = irecno;
   end if;    

   if tg_op = 'DELETE' then
      return old;
   else   
      return new;
   end if;     

End;
$$ language plpgsql;