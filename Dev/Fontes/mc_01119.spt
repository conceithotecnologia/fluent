/**
   Estoque - Reprocessamento dos Kardex para os materiais selecionados

	@author  Ricardo Gonçalves
	@date    31/05/2018
	@trigger   
   
   @param in_data data inicial para o reprocessamento.   
   @param in_codpro código do material que será reprocessado   

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01119####???(   
   in in_data date)
Returns integer As
$$
Declare
   r           record;    
   csessao     varchar;
   ierro       integer;
Begin   
   csessao := sys_session();
   for r in (
      select a.b1_codpro, b.recfile, b.recno 
        from [(e27)] a
             join [(ss029)] b
               on b.session = csessao
              and b.codtable = 'E27'
              and b.recfile = a.recno
       order by a.b1_codpro)
   loop 
      -- Contagem de erros do usuário
      ierro := sys_00039####???(sys_user####???());
      -- Execução da rotina
      perform mc_00852####???(in_data, r.b1_codpro);
      -- Verificação da contagem de erros. Caso não seja alterada a rotina foi executada com êxito
      if sys_00039####???(sys_user####???()) = ierro then         
         delete 
           from [(ss029)] 
          where recno = r.recno;
      end if;
   end loop;

   return 1;
End;
$$
language plpgsql;