/**
   Processa alterações após gravação do formulário

	@author    Wagner
	@date      27/01/2012 21:30
	@trigger   SS039 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create Or Replace Function ss_00045()
Returns trigger
As
$$
Declare
Begin
   if tg_op = 'DELETE' then
      -- Revoga todas as permissões da tela
      perform sys_revoke_obj(old.obj_id, '*');
   else
      -- Concede direito de execução
      perform sys_grant_obj(new.obj_id, 'x', new.description);
   end if;

   return null;
End;
$$
language plpgsql;