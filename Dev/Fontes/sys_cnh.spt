/**
  Validação da CNH

   Autor	      Fabio Crepaldi Carvalho
   Data        24/07/2009

   Parâmetro   cnh número a validar.

	Histórico
	------------------------------------------------------------------
*/
Create or Replace Function sys_cnh
(  in cnh varchar(11))
Returns void
as $$
Declare
   ErrorCode integer;
Begin
   ErrorCode := sys_cnh_check(cnh);

   if ErrorCode = 1 then
      raise '[[C.N.H. Inválida. A CNH deve ser composta de 11 números]]';
   end if;

   if ErrorCode = 2 then
      raise '[[C.N.H. % inválida. Verifique.]]', cnh;
   end if;
End;
$$ language 'plpgsql';