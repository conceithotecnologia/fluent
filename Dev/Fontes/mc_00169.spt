Create or Replace Function mc_00169####???
() Returns trigger
As $$
Declare
-- {Variáveis de uso interno}
   iRecno    integer;

Begin
   If tg_op = 'INSERT' Then
      -- Verifica se já existe Configuração das Locações
      Select recno 
        Into iRecno
        From [(lo3)];
        
      -- Avisa o usuário caso já exista registro        
      If iRecno Is Not Null Then
         raise '[[Atenção. Já existe Configuração Cadastrada.]]';
      End If;
      Return new;
   ElsIf tg_op = 'DELETE' Then
      raise '[[Atenção. Não é permitido Excluir a Configuração.]]';
      Return old;
   End If;
--   raise '[[%]]',new.sew_pedagio_1;
   Return new;
End;
$$ language plpgsql;