/**
   Valida avaliação de serviço

	@author    Gabriel Montes
	@date      14/02/2014 14:39:00
	@trigger   FDS B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00790####???()
  RETURNS trigger AS
$$
DECLARE
   r           record;
   r1          record;
   irec_aval   integer;
BEGIN
   
   if tg_op = 'DELETE' then
      irec_aval := old.fdr_recno;
   else
      irec_aval := new.fdr_recno;
   end if;
   
   select fdr_estado
     into r
     from [(fdr)]
    where recno = irec_aval;
   
   if tg_op = 'DELETE' then
      
      if r.fdr_estado = 5 then
         raise '[[Itens não podem ser excluídos de avaliações encerradas.]]';
      else
      
      end if;
         
      return old;
   else
                           
      select z2_coduni, b1_coduni
        into r1
        from [(sb1)] sb1 
       where sb1.b1_codpro = new.b1_codpro;
         
      if new.z2_coduni <> r1.z2_coduni
      then
         
         if r1.b1_coduni is not null then
            if new.z2_coduni <> r1.b1_coduni
            then
               raise '[[Unidade de medida inválida para o material requisitado.]]';
            end if;
         else
            raise '[[Unidade de medida inválida para o material requisitado.]]';        
         end if;
      end if;
      
      if r.fdr_estado = 5 then
            raise '[[Itens não podem ser inseridos ou alterados de avaliações encerradas.]]';
      end if;
      
      new.fds_tot := new.fds_qtd * new.fds_unit;
      
      return new;
   end if;  
   
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;