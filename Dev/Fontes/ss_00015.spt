/**
   Processamento antes da alteração do contexto

	@author    Ricardo Gonçalves
	@date      03/07/2009 21:18:17
	@trigger   SS096 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function ss_00015####???()
Returns trigger
As
$$
Declare
   ituples  integer;
Begin
   if tg_op = 'DELETE' then
      return old;
   else
      if new.default_ <> 1 then
         select count(*)
           into ituples
           from [(ss096)]
          where coduser = new.coduser
            and recno <> new.recno
            and default_ = 1;

         if ituples = 0 then
            new.default_ = 1;
         end if;
      end if;

      return new;
   end if;
End;
$$
language plpgsql;