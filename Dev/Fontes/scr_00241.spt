/**
   Trigger de Tela da tabela cty - Lançamentos Contabeis

	@author    Fabio Carvalho
	@date      13/08/2020
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function scr_00241####???
(  out out_res integer )
As $$
Declare
   iPlano     [(ctb)].recno%type;
   iData      [(cty)].cty_data%type;
Begin
   -- recupera plano padrão
   iPlano   := sys_042integer2####???('CTY', 'ctb_recno');
   iData    := sys_042date2####???   ('CTY', 'cty_data');

   if iData is null then
      raise '[[ATENÇÃO. Data Inválida. Verifique!]]';
   end if;

   if iPlano is null then
      select recno
        into iPlano
        from [(ctb)]
       where ctb_status   = 1
         and iData >= ctb_inicio 
         and iData <= ctb_termino;
   
      if not found then
         raise '[[ATENÇÃO. Não há plano de contas em uso por esta empresa. Verifique !]]';
      end if;

      perform sys_042integer_wr####???('CTY', 'ctb_recno', iPlano);
   end if;

   out_res := 1;
End;
$$ language plpgsql;