/**
   Checa se o cliente informado está ativo

	@author    Ricardo Gonçalves
	@date      23/08/2012 13:44:27
	@trigger
	
	@param in_pessoa código da pessoa que o cadastro deve ser checado
	@param in_msg se verdadeiro o sistema levanta uma exceção caso o cadastro da pessoa esteja inativo
	@return 1 se o cadastro da pessoa estiver ativo

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION ck_00006####???(
   in in_pessoa integer,
   in in_msg boolean)
  RETURNS integer AS
$$
Declare
   r  record;
BEGIN

   select sfj_nome, sfj_apelido, sfj_situacao
     into r
     from [(sfj)]
    where sfj_pessoa = in_pessoa;

   if not found then
      if in_msg then
         raise '[[Pessoa % não cadastrada.]]', in_pessoa;
      else
         return 0;
      end if;
   end if;

   if r.sfj_situacao <> 1 then
      if in_msg then
         raise '[[Cadastro da pessoa % - % (%) está inativo.]]', in_pessoa, r.sfj_nome, r.sfj_apelido;
      else
         return 0;
      end if;
   end if;

   return 1;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;