Create or Replace Function mc_numcheque####???
( Out out_res Integer )
As $$
Declare
   vak_cc  [(sak)].ak_cc%type;              -- Número da Conta Bancária
   iCheque [(sak)].ak_cheque%type;          -- Número do Cheque Inicial
   
   -- variaveis de uso interno
   nQuantos    Integer;
Begin
   out_res := 0;

   -- testa se usuario marcou algum registro para emissao de cheques
   Select count(session)
     into nQuantos
     from [(ss029)]
    Where session = sys_session();

   if nQuantos = 0 Then
      raise '[[ATENÇÃO. É necessário selecionar pelo menos um movimento. Favor verificar.]]';
   end if;

   -- Recupera os valores correntes na seção
   Select fsd.ak_cc 
     Into vak_cc 
     from [(fsd)] fsd 
          Join [(ss029)] ss029 on fsd.recno = ss029.recfile;
       
   -- Atribuo o novo valor no 1o. Parametro
   update [(ss042)]
      set string_    = Vak_cc, enabled  = 0
    where session    = sys_session()
      and Columnname = 'param_1';
        
   -- Atribuo o novo valor do cheque
   update [(ss042)]
      set integer_   = coalesce((select ak_cheque from [(sak)] where ak_cc = vak_cc), 1)
    where session    = sys_session()
      and Columnname = 'param_2';

   out_res := 1;
end;
$$ language 'plpgsql'
