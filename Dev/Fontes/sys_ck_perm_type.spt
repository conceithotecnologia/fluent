/**
   Valida o tipo de permissão

	@author    Ricardo Gonçalves
	@date      23/06/2009 21:04:50
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function sys_ck_perm_type(
   in in_perm  varchar
)
Returns void
AS
$$
Begin
   if lower(trim(in_perm)) not in ('i', 'u', 'd', 'p', 'ps', 'qs', 'x') then
      raise '[[Tipo de permissão "%" não pode ser concedida a objetos de sistema.]]', in_perm;
   end if;
End;
$$
language plpgsql;