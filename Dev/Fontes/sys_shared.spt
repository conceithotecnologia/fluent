create or replace function sys_shared (varchar(20)) returns integer
as $$
declare
   in_alias   alias for $1;
   out_result integer;
begin
   out_result:= 0;

   select share into out_result
     from ss009
    where codtable = in_alias;
   	   
   return out_result;
end;
$$ language plpgsql;