Create or Replace Function mc_01036####???
() Returns trigger
As $$
Declare
Begin
   if (Select count(*)
         From [(tl0)]) > 0 then
      raise '[[Tabela permite sómente 1 (um) registro !]]';
   end if;

   if tg_op = 'DELETE' Then
      Return old;
   else   
      Return new;
   end if;   
End;
$$ language 'plpgsql';
   
   