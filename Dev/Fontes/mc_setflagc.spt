/**
   Marca uma posição no semáforo para tabelas compartilhadas

	@author    Ricardo Gonçalves
	@date      12/03/2011 18:44:55
	@trigger

	@param codtable  Tabela marcada
   @param recno Registro da tabela

   @return 0 - Não marcado / 1 - Marcado

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_setflagc####???
(  In  in_codtable varchar(20),
   In  in_recno integer)
Returns integer
As $$
Begin
   if not exists(
      select 1
        from ss009
       where codtable = upper(in_codtable)
         and modo = 1)
   then
      raise '[[Somente tabelas compartilhadas podem executar essa rotina de marcação]]';
   end if;

   -- Obtem a marcação
   if exists (
      Select 1
        From [(ft3)]
       Where ft3_origem = upper(in_codtable)
         And ft3_recno  = in_recno)
   Then
      Return 1;
   End if;

   -- Insere a marcação
   Insert Into [(ft3)] ( ft3_origem,  ft3_recno )
        Values         ( upper(in_codtable), in_recno );

   Return 1;
End;
$$ language plpgsql;
