CREATE OR REPLACE FUNCTION mc_00702####???()
Returns trigger
as $$
DECLARE
Begin 
   
   if (tg_op = 'DELETE') then 

      perform 1
        from [(a2k)] a2k 
            join [(sfj)] sfj
              on sfj.sfj_pessoa = a2k.sfj_pessoa             
      where a2k.sfj_pessoa = ck_00009####???(sys_user####???()); 
      
      if not exists(
         select 1
           from [(a3s)]  a3s
              join [(a2k)] a2k
                on a2k.sfj_pessoa = a3s.sfj_pessoa
               and a2k.coduser = sys_user####???())
      then
         raise '[[O usuário "%" não está cadastrado como Comprador.]]', sys_user####???();
      end if;
      return old;
   end if;
   
   if (tg_op <> 'DELETE') then
      
      perform 1
         from [(a2k)] a2k 
             join [(sfj)] sfj
               on sfj.sfj_pessoa = a2k.sfj_pessoa             
       where a2k.sfj_pessoa = ck_00009####???(sys_user####???()); 
      
      if not exists(
         select 1
           from [(a3s)]  a3s
              join [(a2k)] a2k
                on a2k.sfj_pessoa = a3s.sfj_pessoa
               and a2k.coduser = sys_user####???())
      then
         raise '[[O usuário "%" não está cadastrado como Comprador.]]', sys_user####???();
      end if;
      
      if (tg_op = 'INSERT') then
         
        select coalesce(max(recno),0) +1
        into new.recno
        from [(sh5)];
         
         new.sh5_emissao := current_timestamp;
         new.sh5_estado  := 4;
      end if;
      
   end if;
   return new;
END;
$$ Language 'plpgsql';