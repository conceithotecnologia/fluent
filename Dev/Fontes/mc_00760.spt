/**
   Atualiza informações da fila de processamento de serviços eletrônicos

	@author    Ricardo Gonçalves
	@date      29/11/2013
	@trigger   SS084 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   30/06/2018  Ricardo Gonçalves
      [Remove o código da ação o serviço não tenha comandos
*/
Create or Replace Function mc_00760####???()
Returns trigger As 
$$
Begin  
   if tg_op != 'DELETE' then      
      if not exists(
         select 1
           from ss137
          where servico = new.servico)
      then
         new.acao := null;
      end if;

      new.pulso := coalesce(new.pulso, clock_timestamp());
      new.agendado_para := coalesce(new.agendado_para, new.pulso, clock_timestamp());
      
      if tg_op = 'INSERT' then
         new.criacao := sys_timestamp();
      end if;
      
      if tg_op = 'UPDATE' then
         -- Atualiza início do processamento
         if old.estado = 0 and new.estado = 3 then
            new.processando := clock_timestamp();
         end if;
         
         if new.estado in (1,2) and new.estado <> old.estado then
            new.processado :=  clock_timestamp();
         end if;
      end if;
      
      return new;
   else
      return old;
   end if;
End;
$$ language plpgsql;