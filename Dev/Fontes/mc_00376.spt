/**
   Atualização do resumo do faturamento.

	@author    Ricardo Gonçalves
	@date      09/04/2012 21:23:55
	@trigger   TLY B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   
   08/11/2012 16:10:00  v2    Ricardo Gonçalves.
      [-] Serviços inseridos manualmente não estavam sendo checados. A chamada a rotina ck_00008 faz a checagem.
*/
CREATE OR REPLACE FUNCTION mc_00376####???()
  RETURNS trigger AS
$$
Declare
   bValidaServ boolean;
BEGIN
   bValidaServ := false;
   
   if tg_op = 'INSERT' then
      -- Configura origem do lançamento
      new.codtable := coalesce(new.codtable, 'TLY');

      if new.codtable = 'TLY' then
         new.tly_recno := new.recno;
      end if;
      
      bValidaServ := True;
   end if;

   if tg_op <> 'DELETE' then      
      if tg_op = 'UPDATE' then
         bValidaServ := new.sew_servico <> old.sew_servico;      
      end if;
      
      -- Validação do serviço quando inserido manualmente na fatura
      if bValidaServ and new.codtable = 'TLY' then
         -- Valida código de serviço informado
         perform ck_00008####???(new.sew_servico, true);
      end if;
      
      -- Totaliza o item
      new.tly_valor := new.tly_qtd * new.tly_unit;
      
      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;