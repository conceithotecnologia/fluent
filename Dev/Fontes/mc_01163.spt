/**
   Processamento da fila de geração de arquivos

	@author    Ricardo Gonçalves
	@date      20/06/2018
	@trigger   SS135 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_01163####???()
Returns trigger As 
$$
Declare
   bGerar   boolean;
Begin
   if tg_op <> 'DELETE' then
      if new.estado = 1 then
         -- Solicita geração do arquivo imediatamente
         insert into [(ss084)] 
           (servico, codtable, ss084_recno)
         values
           (10,      'SS135', new.recno);
      end if;

      if new.estado = 2 and old.estado <> 2 then
         -- NFA - XML NFe - Aprovação
         if new.codtable = 'NFA' and new.acao = 10 then
            update [(nfa)]
               set nfa_xmnfe = 1
               where recno = new.ss135_recno;
         -- NFA - XML CCe
         elsif new.codtable = 'NFA' and new.acao = 20 then
            update [(nfa)]
               set nfa_xmcce = 1
               where recno = new.ss135_recno;
         -- NFA - XML NFe - Cancelamento
         elsif new.codtable = 'NFA' and new.acao = 30 then
            update [(nfa)]
               set nfa_xmnfe_c = 1
               where recno = new.ss135_recno;
         -- A50 - XML Cte - Envio
         elsif new.codtable = 'A50' and new.acao = 10 then
            update [(a50)]
               set a50_xmcte = 1
               where recno = new.ss135_recno;
         -- A50 - XML Cte - Cancelamento
         elsif new.codtable = 'A50' and new.acao = 20 then
            update [(a50)]
               set a50_xmcte_c = 1
               where recno = new.ss135_recno;
         end if;
      end if;


   end if;

   return null;
End;
$$ language plpgsql;