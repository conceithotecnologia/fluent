/**
 *	Retorna o ano fiscal para uma data informada
 *
 *	@author 	Ricardo Gonçalves
 *	@date 	19/08/2008 16:39:15
 *
 * @param 	in_data	data para comparação
 * @return 	ano fiscal em que a data se encontra
 */

 Create or Replace Function mc_00538####???(
 	in in_data date
 )
 Returns integer
 As
 $$
 Declare
 	dEncerramento		date;
 	Result		integer;
 Begin
 	result := sys_year(in_data);

 	dEncerramento := mc_00532####???(result, 2);

 	if dEncerramento is null then
 		raise '[[A tabela de parâmetros não está preenchida, portanto, não é possivel obter o ano fiscal para data %]]', to_char(in_data, 'DD/MM/YYYY');
 	end if;

 	if in_data > dEncerramento then
      result := result + 1;
   end if;

	return result;
 End;
 $$
 language plpgsql;