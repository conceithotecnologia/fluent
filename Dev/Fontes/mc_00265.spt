/**
   Obtem endereço atual de faturamento formatado

	@author    Ricardo Gonçalves
	@date      23/07/2010 13:09:08
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00265####???(in_pessoa integer)
  RETURNS character varying AS
$$
Declare
   out_ender      varchar;
Begin
   begin
      out_ender := mc_00203####???(in_pessoa, mc_00204####???(in_pessoa, current_date, 1, 1));
   exception
      when raise_exception then
         out_ender := 'Endereço não cadastrado. Verifique!';
   end;
   Return out_ender;
End;
$$
language plpgsql;