/**
   Estoque - Registro de conciliação por Ficha

	@author    Ricardo Gonçalves
	@date      15/02/2018
	@trigger
   
   @param in_pessoa  código do proprietário do estoque
   @param in_prod código do material que será verificado
   @param in_ficha código da ficha de estoque que deve ser checada
   @param in_data data que será verificada
   
   @return 1 caso esteja conciliado ou 0 caso contrário

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso      
*/
Create or Replace Function mc_01110####???(
   in in_pessoa integer,
   in in_prod varchar,
   in in_ficha integer,
   in in_data date) 
Returns integer As
$$
Declare
   r        record;
   lanc     mov;
   fsaldov  [(a12)].a12_saldov%type;
Begin   
   -- Valida conciliação. Caso haja conciliação com data posterior a in_data é levantada exceção pela rotina mc_01107
   perform mc_01107####???(in_pessoa, in_prod, in_ficha, in_data);
   
   -- Localizando saldo anterior      
   select recno,      a12_saldo, a12_custo, a12_saldov,
          'Saldo inicial ' || to_char(in_data, 'dd/mm/yyyy') || '. Saldo base ' || to_char(a12_data, 'dd/mm/yyyy')
     into lanc.recno, lanc.qtd, lanc.custo, fsaldov,
          lanc.descri         
     from [(a12)]
    where sfj_pessoa = in_pessoa
      and a4i_tipo = in_ficha
      and b1_codpro = in_prod
      and a12_data <= in_data                  
    order by a12_data desc, a12_evento desc, a12_tipo desc, recno desc
    limit 1;

   -- Transfere o saldo somente se a quantidade ou o custo tenham valor
   if FOUND and ((lanc.qtd > 0 or fsaldov > 0) and lanc.custo > 0) then
      -- Informações gerais do registro de lançamento
      lanc.pessoa := in_pessoa;
      lanc.ficha := in_ficha;
      lanc.material := in_prod;
      lanc.operac := -1; -- registro de saldo      
      lanc.evento := -1; -- evento de conciliação
      lanc.data := in_data + 1;
      lanc.tabela := 'A12';
      lanc.mfilial := 1;
      lanc.mlote := 0;
      lanc.mender := 0;
      
      select z2_coduni
        into lanc.unidade
        from [(sbf)]
       where b1_codpro = in_prod;
    
      -- Registrando conciliação no kardex
      perform mc_00978####???(lanc);      
   end if;      
   
   return 1;
End;
$$
language plpgsql;
