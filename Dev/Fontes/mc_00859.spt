Create or Replace Function mc_00859####???()
Returns trigger As 
$$
Begin
   perform sys_log_clear####???('e11', new.recno);

   new.e11_obs := null;
   new.e11_estado := 2;
   
   new.e11_qtdd_u1 := new.e11_qtd_u1 - new.e11_qtdr_u1;
   new.e11_qtdd_u2 := new.e11_qtd_u2 - new.e11_qtdr_u2;
   
   if new.e11_qtdp_u1 > 0 then
      new.e11_qtdp_u1 := new.e11_qtdp_u1 + new.e11_qtdd_u1;
   end if;
   
   if new.e11_qtdp_u2 > 0 then
      new.e11_qtdp_u2 := new.e11_qtdp_u2 + new.e11_qtdd_u2;
   end if;
   
   if new.e11_qtdd_u1 < 0 then
      new.e11_estado := 1;
      perform sys_log####???('e11', new.recno, 'Disponível 1ª unidade negativa em ' || new.e11_qtdd_u1);      
   end if;
   
   if new.e11_qtdd_u2 < 0 then
      new.e11_estado := 1;      
      perform sys_log####???('e11', new.recno, 'Disponível 2ª unidade negativa em ' || new.e11_qtdd_u2);            
   end if;
   
   if new.e11_custou_u1 <= 0 and new.e11_qtd_u1 <> 0 then
      new.e11_estado := 1;      
      perform sys_log####???('e11', new.recno, 'Custo unitário 1ª unidade inválido ' || new.e11_custou_u1);            
   end if;
   
   if new.e11_custou_u2 <= 0 and new.e11_qtd_u2 <> 0 then
      new.e11_estado := 1;      
      perform sys_log####???('e11', new.recno, 'Custo unitário 2ª unidade inválido ' || new.e11_custou_u2);            
   end if;
   
   if new.e11_qtdr_u1 > 0 and new.e11_qtdr_u1 > new.e11_qtd_u1 then
      new.e11_estado := 1;      
      perform sys_log####???('e11', new.recno, 'Qtd. reservada na 1ª unidade é maior que a quantidade');
   end if;
   
   if new.e11_qtdr_u2 > 0 and new.e11_qtdr_u2 > new.e11_qtd_u2 then
      new.e11_estado := 1;      
      perform sys_log####???('e11', new.recno, 'Qtd. reservada na 2ª unidade é maior que a quantidade');
   end if;

   Return New;
End;
$$ Language plpgsql;