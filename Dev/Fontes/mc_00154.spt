/**
   Validação do cadastramento de municípios

   Autor	   Fabio Carvalho
   Data     01/11/2008 11:39:52
   Trigger  SZ9 Before

	Histórico
	------------------------------------------------------------------
      22/11/2008 11:40:23  v1.0  Ricardo Gonçalves.
         [*] O código do estado passa a ser recuperado da tabela 
            SZ7 através do campo de UF.
*/
Create or Replace Function mc_00154####???() 
Returns trigger
As $$
Declare
   vz7_codigo  [(sz7)].z7_codigo%type;
begin
   if tg_op <> 'DELETE' then
      select z7_codigo
        into vz7_codigo
        from [(sz7)]
       where z7_uf = new.z7_uf;

      if not Found then
         raise '[[Não é possível cadastrar municípios no estado %. Estado não cadastrado.]]', new.z7_uf;
      end if;

      if vz7_codigo is null then
         raise '[[Código do estado para uf % deve ser preenchida.]]', new.z7_uf;
      end if;

      new.sz9_municipio := vz7_codigo || new.sz9_cidade;
      Return new;
   else
      Return Old;
   end if;
end;
$$ language 'plpgsql'