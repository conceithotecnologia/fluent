/**
   Validação de destinatários de mensagens

	@author    Ricardo Gonçalves
	@date      27/10/2010 09:37:40
	@trigger   ss109 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION ss_00039####???()
  RETURNS trigger AS
$$
Declare
   rmsg        record;
   rrow        record;
   irec_msg    [(ss108)].recno%type;
BEGIN

   if tg_op <> 'DELETE' then
      irec_msg := new.ss108_recno;
   else
      irec_msg := old.ss108_recno;
   end if;

   -- Obtem informações da mensagem
   select type_, status, subject
     into rmsg
     from [(ss108)]
    where recno = irec_msg;

   if not Found then
      raise '[[Mensagem % não localizada na fila de mensagens.]]', irec_msg;
   end if;

   -- Valida a alteração dos destinatários da mensagem
   if rmsg.status <> 0 and mc_getflag####???('SS108', irec_msg) <> 1 then
      raise '[[Para que seja possível alterar os destinatários da mensagem "% - %" seu status deve ser 0 - Suspenso.]]',
         irec_msg, rmsg.subject;
   end if;

   if tg_op <> 'DELETE' then
      if tg_op = 'INSERT' then
         new.read_ := 0;
      end if;

      -- Valida o destinatário
      if new.to_user is not null then
         -- Recupera informações do usuário
         select name, active, email
           into rrow
           from [(ss003)]
          where coduser = new.to_user;

         --raise '[[Destinatário do sistema % não localizado no banco de dados]]', new.to_user;

         -- Impede mensagens para usuários inativos
         if rrow.active <> 1 then
            raise '[[Destinatário do sistema % - % não pode receber mensagens porque está inativo.]]',
               new.to_user, rrow.name;
         end if;

         -- Verifica e-mail do destinatário
         if rrow.email is not null then
            new.to_ := rrow.email;
         end if;

         -- Verifica e-mail do destinatário
         if rrow.name is not null then
            new.to_name := rrow.name;
         end if;
      elsif rmsg.type_ in (1, 3) then
         raise '[[Para envio de mensagens internas é necessário informar um destinatário do sistema.]]';
      end if;

      -- Verifica o endereço de e-mail
      if rmsg.type_ in (2, 3) and new.to_ is null then
         raise '[[Para envio de mensagens externas é necessário informar o e-mail do destinatário.]]';
      end if;
      
      if exists(
         select 1
           from [(ss109)]
          where ss108_recno = new.ss108_recno
            and to_ = new.to_)
      then
         return null;
      end if;

      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;