Create or Replace Function mc_00766####???()
Returns trigger
As $$
Declare
Begin

   if tg_op <> 'DELETE' then
      --Se preço Fechado -> Apaga Trechos
      if new.lpr_vr_fechado = 0 then
         delete from [(lps)]
          where sfj_pessoa = new.sfj_pessoa
            and lpr_pacote = new.lpr_pacote;
      end if;
      return new;
   else
      return old;
   end if;
End;
$$ language plpgsql;