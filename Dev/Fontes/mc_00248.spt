/**
   Valida um produto em relação a uma natureza de operação

	@author    Ricardo Gonçalves
	@date      23/01/2010 17:00:14
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   30/03/2015 22:14:00  v2    Ricardo Gonçalves
      [*] Remoção da referencia as tabelas A18 e A19
*/
Create or Replace Function mc_00248####???(
   in_codpro varchar(25),
   in_tes integer)
Returns void
As
$$
Declare
   rrow  record;
   rsf4  record;
Begin
   if in_codpro is null then
      raise '[[Não é possível validar uma natureza de operação para um produto nulo.]]';
   end if;
   
   select coalesce('('||sb1.b1_ref||') ', '') || sb1.b1_nome as b1_nome
     into rrow
     from [(sb1)] sb1
          left join [(sbf)] sbf
            on sbf.b1_codpro = sb1.b1_codpro
    where sb1.b1_codpro = in_codpro;

   if not found then
      raise '[[Não há produto cadastrado com o código %.]]', in_codpro;
   end if;

   select f4_descri, sf4_ativo
     into rsf4
     from [(sf4)] sf4
    where sf4.f4_tes = in_tes;

   if not found then
      raise '[[Natureza de operação % não cadastrada.]]', in_tes;
   end if;
   
   if rsf4.sf4_ativo = 0 then
      raise '[[Natureza de operação % - % está inativa.]]', in_tes, rsf4.f4_descri;
   end if;
End;
$$
language plpgsql;