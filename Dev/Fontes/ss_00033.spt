Create Or Replace Function ss_00033####???()
Returns trigger
As
$$
Begin
   if tg_op <> 'DELETE' then
      perform sys_grant_obj(new.obj_id, 'x', new.caption);

      return new;
   else
       perform sys_revoke_obj(old.obj_id, '*');

      return old;
   end if;
End;
$$
language plpgsql;