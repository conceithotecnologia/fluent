/**
   Script - Atualiza Nota Fiscal de Serviços por Emissao pelo Site

	@author    fabio Carvalho
	@date      22/04/2019
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
CREATE OR REPLACE FUNCTION MC_01233####???
( in  pCodigo  varchar(09),
  in  pNota    integer,
  in  pEmissao timestamp,
  in  pRecno   integer,
  out out_res  integer)
As $$
Declare
BEGIN
   --Efetua o Update
   update [(nfk)] set nfk_cod_verif   = pCodigo,
                      nfk_nfs_numero  = pNota,
                      nfk_nfs_emissao = pEmissao,
                      nfk_situacao    = 4,
                      nfk_financas    = 1,
                      nfk_estado      = 3,
                      nfk_status_fat  = 3
    where recno = pRecno;

   perform sys_msg####???(1, 'ATENÇÃO! Alteração Efetuada com Sucesso !.');

   out_res := 1;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;