/**
   Validação do tipo do atributo

	@author    Ricardo Gonçalves
	@date      20/06/2016 
	@trigger   SS120 B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create Or Replace Function ss_00065####???()
Returns trigger As
$$
Declare
  r            record;
Begin   
   if tg_op <> 'DELETE' then   
      -- Recuperando informações do domínio e preenchendo campos
      if new.domain_ is not null then
         select d.name, d.size, d.precision, dt.datatype       
           into r
           from ss023 d
                join ss085 ct       
                  on ct.recno = d.content_type
                join ss086 dt
                  on dt.datatype = ct.datatype
          where d.domain_ = new.domain_;
         
         new.datatype := r.datatype;
         new.attribute := coalesce(new.attribute, r.name);
      end if;

      select required_length, required_precision 
        into r
        from ss086
       where datatype = new.datatype;
      
      if r.required_length = 0 then
         new.size := null;
      elsif new.size <= 0 then
         raise 'ATENÇÃO! Tamanho do atributo % deve ser maior que zero.', new.attribute;
      end if;
      
      if r.required_precision = 0 then
         new.precision := null;
      elsif new.precision <= 0 then
         raise 'ATENÇÃO! Precisão do atributo % deve ser maior que zero.', new.attribute;
      end if;
      
      return new;
   else    
      return old;
   end if;
End;
$$
language plpgsql;