As $$
Declare
begin
   if    tg_op = 'DELETE' then
      return old;
   else
      if new.a9_codbanco = 341 and new.sgl_cod is null then
         raise '[[ATENÇÃO. O código de banco deverá ser informado para carteira do banco Itau. Verifique !]]';
