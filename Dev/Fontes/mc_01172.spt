   PCP - Reordenar operações do roteiro informado

   Autor    Ricardo Gonçalves
   Data     13/07/2018
   Trigger     

	Histórico
	--------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_01172####???(
   in in_roteiro integer)
Returns integer As
$$
Declare
   r  record;
   op integer;
BEGIN
   update [(se6)]
      set se6_operacao = se6_operacao + 100000
    where sdg_roteiro = in_roteiro;

   op := 10;

   for r in (
      select recno 
        from [(se6)]
       where sdg_roteiro = in_roteiro
       order by se6_operacao)
   loop
      update [(se6)]
         set se6_operacao = op
       where recno = r.recno;

      op := op + 10;   
   end loop;

   return 1;
END
$$
language 'plpgsql';