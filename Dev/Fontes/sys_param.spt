/**
   Recupera o conteúdo de um paramêtro

	@author    Ricardo Gonçalves
	@date      26/03/2012 16:43:07
	@trigger

	@param in_param_name nome da coluna onde o parâmetro deve ser obtido.
	@param in_default valor padrão caso o parâmetro não seja localizado.

	@return conteúdo do parâmetro informado.

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   25/04/2012 17:51:20  v2    Ricardo Gonçalves.
      [+] Busca de parâmetros na tabela ss063.
*/
CREATE OR REPLACE FUNCTION sys_param####???(
   in in_param_name varchar,
   in in_default text)
  RETURNS text AS
$$
Declare
   cmd   text;
   res   text;
BEGIN
   res := in_default;

   -- Verifica se o nome da coluna é válida
   if exists(
      select 1
        from ss012
       where codtable = 'SS081'
         and columnname = upper(in_param_name))
   then
      cmd := 'select ' || lower(in_param_name) || ' from ss081' || sys_empfil####???();
      execute cmd into res;
   elsif exists(
      select 1
        from ss012
       where codtable = 'SS063'
         and columnname = upper(in_param_name))
   then
      cmd := 'select ' || (in_param_name) || ' from ss063' || sys_emp####???() || '000 where filial = sys_filial####???()';
      execute cmd into res;
   elsif exists(
      select 1
        from ss012
       where codtable = 'FCC'
         and columnname = upper(in_param_name))
   then
      cmd := 'select ' || (in_param_name) || ' from fcc' || sys_empfil####???();
      execute cmd into res;   
   end if;

   return res;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;