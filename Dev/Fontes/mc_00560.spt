/**
   A1q - Nota dos Conhecimentos

   @author    Fabio Carvalho
   @date      16/07/2013
   @trigger   A1Q B IUD

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00560####???()
Returns trigger
As
$$
Declare
begin
   if tg_op = 'DELETE' then
      return old;
   end if;

   if new.a1q_modelo = 0 then
      if ck_00010(new.a1q_chave) = 0 then
         if new.a1q_chave is null then
            raise '[[Chave da NF-e referenciada no CT-e % não foi preenchida.]]', new.a1p_recno;
         else
            raise '[[Chave "%" da NF-e referenciada no CT-e % é inválida.]]', new.a1q_chave, new.a1p_recno;
         end if;
      end if;
   
      new.a1q_pedido    := null;
      new.a1q_romaneio  := null;
      new.a1q_serie     := null;
      new.a1q_nota      := 0;
      new.a1q_emissao   := null;
      new.a1q_bc_icms   := 0;
      new.a1q_vr_icms   := 0;
      new.a1q_bc_icmsst := 0;
      new.a1q_vr_icmsst := 0;
      new.f8_cfop       := null;
   else
      new.a1q_chave     := null;
   end if;

   return new;
End;
$$
language plpgsql;