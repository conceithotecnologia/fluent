/*============================================================================
  Empresa..: MultCont Informática
  Descrição: Transforma hexadecimal em decimal
  Autor....: Ricardo Gonçalves
  Data.....: 05/06/2006 19:35:07

  Parametro       Descrição
  ---------------|------------------------------------------------------------
  out_res        | 0 - Falha / 1 - Sucesso
  ============================================================================*/
create or replace function sys_htod
(in in_hexa varchar,
 out out_dec integer)
as $$
Declare
   i     integer;
  sbin   varchar;
  schar  varchar(1);
  bsize  integer;
Begin
   out_dec:= 0;
   sbin:= '';

   if trim(in_hexa) = '' or in_hexa is null then
      return;
   end if;
   
   for i in 1..length(in_hexa) loop
      schar:= upper(substr(in_hexa, i, 1));

      if schar = '0' then 
         sbin = sbin || '0000'; 
      end if;
      if schar = '1' then 
         sbin = sbin || '0001'; 
      end if;
      if schar = '2' then 
         sbin = sbin || '0010'; 
      end if;
      if schar = '3' then 
         sbin = sbin || '0011'; 
      end if;
      if schar = '4' then 
         sbin = sbin || '0100'; 
      end if;
      if schar = '5' then 
         sbin = sbin || '0101'; 
      end if;
      if schar = '6' then 
         sbin = sbin || '0110'; 
      end if;
      if schar = '7' then 
         sbin = sbin || '0111'; 
      end if;
      if schar = '8' then
         sbin = sbin || '1000'; 
      end if;
      if schar = '9' then 
         sbin = sbin || '1001'; 
      end if;
      if schar = 'A' then 
         sbin = sbin || '1010'; 
      end if;
      if schar = 'B' then 
         sbin = sbin || '1011'; 
      end if;
      if schar = 'C' then 
         sbin = sbin || '1100'; 
      end if;
      if schar = 'D' then 
         sbin = sbin || '1101';
      end if;
      if schar = 'E' then 
         sbin = sbin || '1110'; 
      end if;
      if schar = 'F' then 
         sbin = sbin || '1111'; 
      end if;      
   end loop;

   -- Converte para decimal
   bsize:= length(sbin) - 1;
   out_dec:= 0;

   for i in 0 .. bsize loop
      if substr(sbin, i + 1, 1) = '1' then
         out_dec:= out_dec + 2 ^ (bsize - i);
      end if;
   end loop;
End;
$$ language plpgsql;