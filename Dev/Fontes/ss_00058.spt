/**
   Processamento de tipo de conteúdo

	@author    Ricardo
	@date      02/01/2015 17:05
	@trigger   SS061 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------	
*/
Create Or Replace Function ss_00058()
Returns trigger As
$$
Declare
Begin
   if tg_op <> 'DELETE' then
      if new.default_ = 1 then
         update ss085
            set default_ = 0
          where datatype = new.datatype
            and recno <> new.recno;          
      end if;
   end if;

   return null;
End;
$$
language plpgsql;
