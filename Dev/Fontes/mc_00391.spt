/**
   Marcação / Desmarcação de Registros dos Usuarios

	@author    Fabio Carvalho
	@date      06/09/2012
	@trigger

	@param

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00391####???(
   in in_recno integer,
   in in_param integer, -- 0=desmarca 1-marcacao
  out out_res  integer)
as $$
Declare
   iQuantos integer;
-- {Variáveis de uso interno}
Begin

   -- Obriga a Marcação do registro PAI
   if in_param = 1 and in_recno > 0 then
      if not exists(select 1
                      from [(ss029)] ss029
                      join [(lpd)] lpd on lpd.recno = ss029.recfile and lpd.recno = in_recno
                     where ss029.session = sys_session()
                       and ss029.codtable = 'LPD'
                       and ss029.codform  = 'LOCAD_LPD_MENSAGENS') then
         raise '[[ATENÇÃO. É necessário selecionar a mensagem a ser enviada. Verifique!]]';
      end if;
   end if;

   out_res := 1;
end;
$$
  LANGUAGE 'plpgsql' VOLATILE;