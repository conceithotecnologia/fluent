	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function mc_00886####???()
Returns trigger As
$$
Declare
Begin
    if    tg_op = 'INSERT' then
--       -- Testa se Ja existe Algum Registro
--       if (select 1
--             from [(cib)]
--            where sfj_pessoa = new.sfj_pessoa) then
--          raise '[[ATENÇÃO. É Permitido somente um registro nesta Tabela. Verifique!]]';
--       end if;

       --Verifica se Cliente já é proprietario
       if not exists (select 1
                        from [(cib)]
                       where sfj_pessoa = new.sfj_pessoa) then
          insert into [(cib)] (sfj_pessoa,      cib_ativo)
                       values ( new.sfj_pessoa, 1);
       end if;

       --Altera Perfil do Pessoa
       update [(sfj)]
          set sfj_perfil[11] = 1
        Where sfj_pessoa = new.sfj_pessoa;

       Return New;
    elsif tg_op = 'UPDATE' Then

       Return New;
   elsif tg_op = 'DELETE' Then
       if not exists (select 1
                        from [(cia)]
                       where sfj_pessoa =  old.sfj_pessoa
                         and recno      <> old.recno) then
          update [(sfj)]
             set sfj_perfil[11] = 0
           Where sfj_pessoa = new.sfj_pessoa;
       end if;

       Return Old;
    End If;
End;
$$
language plpgsql;