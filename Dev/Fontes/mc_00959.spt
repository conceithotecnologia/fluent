/**
   Totalização do cabeçalho de férias fab

	@author    Gabriel Montes
	@date      14/07/2016 11:57:00
	@trigger   FA9 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00959####???()
Returns trigger
As
$$
Declare
   iTipo integer;

Begin   
   if tg_op = 'DELETE' then
      Return old;
   else      
      select f38_tpcodigo
        into iTipo
        from [(f38)]
       where f38_cod = new.fab_evento;
      
      -- Se Provento
      if iTipo = 1 then
         update [(faa)] faa
            set faa_bruto = faa_bruto + new.fab_valor
          where faa.recno =  new.faa_recno;
      elsif iTipo = 2 then -- Se Desconto
         update [(faa)] faa
            set faa_desconto = faa_desconto + new.fab_valor
          where faa.recno =  new.faa_recno;
      else -- Se Base
      
      end if;
      
      update [(faa)] faa
         set faa_liquido  = faa_bruto - faa_desconto
       where faa.recno =  new.faa_recno;      
   end if;
   
   Return new;
End;
$$
language plpgsql;
