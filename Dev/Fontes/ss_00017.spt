/**
   Reordena Campo Order das Tabelas

	@author    Fabio Carvalho
	@date      17/03/2008 15:58:09
	@trigger
	
	@param ctabela código da tabela que terá os campos reordenados

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   18/12/2009 14:12:57  v1    Ricardo Gonçalves.
      [*] Alteração do tipo de cursor.
      [*] Campo order_ com início em 6000

   18/02/2012 15:54:58  v2    Ricardo Gonçalves.
      [*] A reordanação passa a ocorrer em tabelas marcadas.
*/
CREATE OR REPLACE FUNCTION ss_00017####???()
returns integer

as $$
declare
   r           record;
   iorder_     ss012.order_%type;
   vcodtable   ss012.codtable%type;
begin
   vcodtable := '';

   for r in (
      select t.codtable, c.order_, c.recno
        from ss009 t
             join [(ss029)] m
               on m.session = sys_session()
              and m.codtable = 'SS009'
              and m.recfile = t.recno
             join ss012 c
               on c.codtable = t.codtable
              and coalesce(c.order_,0) < 6000
       order by t.codtable, c.order_)
   Loop
      if vcodtable <> r.codtable then
         iorder_ := 10;
         vcodtable := r.codtable;
      end if;

      update ss012
         set order_ = iorder_
       where recno = r.recno;

      iOrder_:= iOrder_ + 10;
   end Loop;

   return 1;
end;
$$ LANGUAGE 'plpgsql'
