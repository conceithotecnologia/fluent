/**
   Validação de cadastro de supervisor

	@author    Gabriel Montes
	@date      14/05/2013 11:05:00
	@trigger   A3R B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
   
   05/06/2013 16:21:00  v2    Gabriel de Lima Montes
      [+] Valída se o grupo de supervisores ficará ativo, dependendo do status e quantidade de supervisores cadastrados.
   
*/
CREATE OR REPLACE FUNCTION mc_00482####???()
Returns trigger
as
$$
Declare
r record;
Begin
   IF(tg_op = 'DELETE') THEN
   
      if not exists(
         select 1
           from [(a3r)] a3r
          where a3r.a3w_recno = old.a3w_recno
            and a3r.sfj_pessoa != old.sfj_pessoa) then
         
        update [(a3w)] a3w
           set a3w_estado = 0
         where a3w.recno = old.a3w_recno;
      end if; 
   
      RETURN old;
   else
      perform ck_00009####???(a2k.coduser)
         from [(a2k)] a2k 
        where a2k.sfj_pessoa = new.sfj_pessoa;

      if not exists(
         select 1
           from [(a3r)] a3r
          where a3r.a3w_recno = new.a3w_recno
            and a3r.sfj_pessoa != new.sfj_pessoa
            and a3r_situacao = 1) 
      then
         update [(a3w)] a3w
            set a3w_estado = 0
          where a3w.recno = new.a3w_recno;
      end if; 
      
      if(tg_op = 'INSERT') then
         if exists(
            select 1
              from [(a3x)] a3x 
             where a3x.sfj_pessoa = new.sfj_pessoa
               and a3X.a3w_recno = new.a3w_recno)
         then
            raise '[[O usuário "%" já está cadastrado neste grupo como solicitante.]]',new.sfj_pessoa; 
         end if;
      end if;  
   
      return new;      
   end if;
END;
$$ 
Language plpgsql;