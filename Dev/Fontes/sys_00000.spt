/**
   Envia comando para o monitor regerar XML e PDF

	@author    Ricardo Gonçalves
	@date      01/04/2014
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   18/08/2014 09:15:00  v1    Wagner Mobile Costa
      [+] Passagem de parametro indicando a impressão automática do documento
*/
Create or Replace Function sys_00000####???()
Returns integer
As $$
Declare
   rnf         record;
Begin
   for rnf in (
      select nfa.cstat, nfa.ide_nnf, nfa.chnfe, nfa.ide_demi, nfa.nfa_serial,
             nfa.xml, nfa.nfa_xml_c, nfa.recno
        from [(ss029)] s29
             join [(nfa)] nfa
               on nfa.recno = s29.recfile
       where s29.session = sys_session()
         and s29.codtable = 'NFA')
   Loop
      if rnf.cstat <> 100 and rnf.cstat <> 101 then
         perform sys_msg####???(1, format('Não foi possível recriar os arquivos para nota %s porque ela não está autorizada pela SEFAZ', rnf.ide_nnf));
         continue;
      end if;

      perform sys_00004####???(377, 10, rnf.recno, rNf.ide_demi, rNf.cstat, rnf.chnfe, rnf.xml, rnf.nfa_xml_c, 0, null, 1);

      perform sys_msg####???(1, format('Solicitação para recriar os arquivos da nota %s enviada ao monitor.', rnf.ide_nnf));
   End Loop;

   delete
     from [(ss029)]
    where session = sys_session()
      and codtable = 'NFA';

   return 1;
End;
$$ language plpgsql;