/**
   Verifica origem do lançamento antes de aceitar desdobramento por natureza financeira

   @author  Jurandy da Silva Costa
   @date    02/10/2004 16:00:00
   @trigger FAR B IUD

   Histórico
   ---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   14/12/2010 20:04:19  v2    Jurandy da Silva Costa.
      [+] Inclusão da validação de natureza ativa / inativa.

   10/01/2011 20:05:35  v3    Ricardo Gonçalves.
      [-] Verificação de flag que anula a checagem de inatividade da natureza.

   05/10/2012 14:59:28  v4    Ricardo Gonçalves.
      [*] Chamada para rotina ck_00007####???(new.f1_codnat) que veririca se a natureza está ativa.
*/
Create or Replace Function mc_00545####???() Returns trigger As $$
Declare
-- {Variáveis de uso interno}

   cOrigem1       [(far)].sar_origem%type;        -- Prefixo da tabela de origem
   iRecno01       [(far)].sar_recno%type;         -- Registro na tabela de origem
   dDataFAR       [(far)].sar_data%type;          -- Data do movimento no detalhamento
   dTipoFAR       [(far)].sar_tipo%type;          -- Tipo do movimento no detalhamento
   cConta         [(sar)].ak_cc%type;             -- Número da conta
   iDesdobra      [(sar)].sar_desdobra%type;      -- Detalhamento por natureza financeira?
   dConcilia      [(sak)].ak_data_ok%type;        -- Data de conciliação

   iAlterou       Integer;                        -- Indicador de alteração no registro
   cConcilia      VarChar(10);

Begin
   If tg_op = 'DELETE' Then
      cOrigem1 := old.sar_origem;
      iRecno01 := old.sar_recno;
      dDataFAR := old.sar_data;
      dTipoFAR := old.sar_tipo;
   Else
      If tg_op = 'UPDATE' Then
         If new.f1_codnat  = old.f1_codnat  And new.far_valor  = old.far_valor  And new.far_juros  = old.far_juros  And
            new.far_multa  = old.far_multa  And new.far_descto = old.far_descto Then
            Return new;
         End If;
      End If;
      cOrigem1 := new.sar_origem;
      iRecno01 := new.sar_recno;
      dDataFAR := new.sar_data;
      dTipoFAR := new.sar_tipo;
      
      if cOrigem1 = 'SAR' then
         select sar_data, recno, sar_tipo
           into new.sar_data, new.sar_recno, new.sar_tipo
           from [(sar)]
          where recno = new.far_recno;
      end if;
      
   End If;
   -- Busca a tabela de origem e o recno no cabecalho da movimentacao bancaria
   Select ak_cc, sar_desdobra Into cConta, iDesdobra
     From [(sar)]
    Where sar_origem = cOrigem1
      And sar_recno  = iRecno01
      And sar_data   = dDataFAR
      And sar_tipo   = dTipoFAR;

   -- Busca data de conciliação no cadastro de contas
   Select ak_data_ok Into dConcilia
     From [(sak)]
    Where ak_cc = cConta;
   -- Não aceita lançamentos com data anterior à data de conciliação
   If dDataFAR <= dConcilia Then
      cConcilia := to_char( dConcilia, 'DD/MM/YYYY' );
      Raise  '[[ATENÇÃO. Não podem ser inseridos, alterados ou excluídos lançamentos com data anterior à Conciliação de % na Conta Corrente %. ]]', cConcilia, cConta;
   End If;

   -- Lançamentos originarios de Contas a Pagar ou Receber não podem ser editados diretamente
   If cOrigem1 <> 'SAR' And mc_getflag####???( cOrigem1, iRecno01 ) = 0 Then
      If cOrigem1 Is Null Then
         Raise '[[ATENÇÃO. Não é possível incluir detalhamento sem o documento principal.]]';
      ElsIf cOrigem1 = 'FCL' Then
         Raise '[[ATENÇÃO. Detalhamento automático da baixa no Contas a Pagar. Não pode ser alterado.]]';
      ElsIf cOrigem1 = 'FAN' Then
         Raise '[[ATENÇÃO. Detalhamento automático da baixa no Contas a Receber. Não pode ser alterado.]]';
      ElsIf cOrigem1 = 'FEL' Then
         Raise '[[ATENÇÃO. Detalhamento do Estorno da baixa no Contas a Pagar. Não pode ser alterado.]]';
      ElsIf cOrigem1 = 'FEN' Then
         Raise '[[ATENÇÃO. Detalhamento do Estorno da baixa no Contas a Receber. Não pode ser alterado.]]';
      ElsIf cOrigem1 = 'F00' Then
         Raise '[[ATENÇÃO. Detalhamento do Banco de Empréstimos. Não pode ser alterado.]]';
      ElsIf cOrigem1 = 'TG8' and mc_getflag####???( cOrigem1, iRecno01 ) = 0 Then
         Raise '[[ATENÇÃO. Detalhamento do Caixa-Gas. Não pode ser alterado.    "%"]]',(mc_getflag####???( cOrigem1, iRecno01 ));
      Else
         Raise '[[ATENÇÃO. Detalhamento automático das Transferências. Não pode ser alterado.]]';
      End If;
   End If;
   If tg_op <> 'DELETE' Then
      -- Verifica se a natureza financeira incluída ou alterada está ativa
      iAlterou := 0;
      If tg_op = 'UPDATE' Then
         If old.f1_codnat <> new.f1_codnat Or (old.f1_codnat Is Null And new.f1_codnat Is Not Null) Then
            iAlterou := 1;
         End If;
      End If;
      If iAlterou = 1 Or (tg_op = 'INSERT' And new.f1_codnat Is Not Null and mc_getflag####???('FAR', new.recno) = 0) Then
         If not ck_00007####???(new.f1_codnat) Then
            Raise  '[[ATENÇÃO. A natureza financeira % está inativa. Favor verificar.]]', new.f1_codnat;
         End If;
      End If;
      Return new;
   Else
      If cOrigem1 = 'SAR' And iDesdobra = 0 Then
         Raise  '[[ATENÇÃO. Lançamentos com uma única natureza devem ser excluídos a partir do cabeçalho.]]';
      End If;
      Return old;
   End If;
End;
$$ language plpgsql;