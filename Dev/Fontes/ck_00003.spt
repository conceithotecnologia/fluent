/**
   Checa se o produto pode ser armazenado no local informado.

	@author    Ricardo Gonçalves
	@date
	@trigger
	
	@param in_codpro Código do produto.
   @param in_endereco Código do local de armazenamento.

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function ck_00003####???(
   in in_codpro varchar,
   in in_endereco varchar)
Returns integer As
$$
BEGIN
   -- Verifica se o local informado é padrão
   if Exists(
      Select 1
        From [(sbf)]
       where b1_codpro = in_codpro
         and (sbf_endereco_rec  = in_endereco or
              sbf_endereco_fat  = in_endereco or
              sbf_endereco_exp  = in_endereco or
              sbf_endereco_prod = in_endereco))
   then
      Return 1;
   end if;

   -- Verifica se o local informado é permitido
   if not Exists(
      select 1
        from [(sct)]
       where b1_codpro = in_codpro
         and b3_endereco = in_endereco)
   then
      Return 0;
   end if;

   Return 1;
END
$$
language 'plpgsql';