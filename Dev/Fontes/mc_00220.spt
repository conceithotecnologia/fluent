/**
   Validação do registro de números de série nos pedidos de venda

	@author    Ricardo Gonçalves
	@date      20/07/2015 16:45:00
	@trigger   A4E B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------   
*/
Create or Replace Function mc_00220####???() 
Returns trigger As 
$$
Declare
   r        record;
   ri       record;
   bValidar boolean;
Begin
   If tg_op <> 'DELETE' Then
      if tg_op = 'INSERT' then
         -- Valida a inserção do nº de série no pedido
         if not exists(
            select 1
              from [(sag)]
             where recno = new.sag_recno
               and sag_gernumser = 1)
         then
            raise '[[O item % do pedido % não permite reservas de nº de série!]]', new.sag_recno, new.saf_codped;
         end if; 
      end if;

      select b1_codpro
        into ri
        from [(sag)]
       where recno = new.sag_recno;
   
      if new.a44_numser is null then
         -- Gera o número de série em estado de reserva caso o usuário não tenha informado
         new.a44_numser := mc_00793####???(ri.b1_codpro, 'A4E', new.recno, 1);         
      else
         bValidar := tg_op = 'INSERT';
         
         if not bValidar then
            bValidar := new.sag_recno != old.sag_recno;
         end if;
         
         if bValidar then
            -- Verifica se o número de série já existe e está disponível
            select a44_estado, b1_codpro, codtable
              into r
              from [(a44)]
             where a44_numser = new.a44_numser;
             
            if Found then
               if ri.b1_codpro != r.b1_codpro then
                  raise '[[Número de série % não é compatível com o material %.]]', new.a44_numser, ri.b1_codpro;
               end if;
               
               if r.a44_estado != 0 then
                  raise '[[Número de série % não está disponível para uso. Informe outro número ou não preencha para o sistema gerar um número automaticamente.]]', new.a44_numser;
               end if;

               update [(a44)]
                  set a44_estado = 1, codtable = 'A4E', a44_recno = new.recno,
                      a44_historico = format('Número de série reservado pelo item %s do pedido de vendas %s.', 
                        new.sag_recno, new.saf_codped)
                where a44_numser = new.a44_numser;            
            else         
               -- Registra o número de série informado pelo usuário
               insert into [(a44)] (a44_numser,     a44_estado, codtable,    a44_recno,  b1_codpro)
                            values (new.a44_numser, 1,          'A4E',       new.recno,  ri.b1_codpro);
            end if;
         end if;
      end if;
      
      Return new;
   Else
      if exists(
         select 1
           from [(sag)]
          where recno = old.sag_recno
            and sag_estado > 1) and
         mc_getflag####???('sag', old.recno) <> 1
      then
         raise '[[O número de série % não pode ser excluído porque o item % do pedido % passou da etada de liberação financeira.]]',
            old.a44_numser, old.sag_recno, old.saf_codped;
      end if;
      
      return old;
   End If;
End;
$$ language plpgsql;
