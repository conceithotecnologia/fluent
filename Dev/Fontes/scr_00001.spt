/**
   Valida e habilita os campos de dias da semana da tabela SFA com base no campo fa_codespec(condição especial)

	@author    Gabriel Montes
	@date      12/03/2014 09:31:00
	@trigger

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function scr_00001####???()
Returns integer
As $$
Declare
   icodespec      [(sfa)].fa_codespec%type;     -- Condição Especial? 0 - Não, 1 - Sim
   cSessao        [(ss027)].session%type;       -- Sessao ativa no banco
Begin

   cSessao := sys_session();

   -- Busca a dados na tabela de sessão
   icodespec  := sys_042integer####???('fa_codespec');

   If icodespec = 0 Then

      -- Habilita campos utilizados por Entradas
      Update [(ss042)]
         Set enabled = 0
       Where session = cSessao
         And codtable = 'SFA'
         And columnname In ('fa_ceseg','fa_ceter','fa_cequa','fa_cequi','fa_cesex');
         
   ElsIf icodespec = 1 Then
      -- Habilita campos desabilitados na entrada do formulário quando tipo = 1 ou 3
      Update [(ss042)]
         Set enabled = 1
       Where session = cSessao
         And codtable = 'SFA'
         And columnname In ('fa_ceseg','fa_ceter','fa_cequa','fa_cequi','fa_cesex');
   End If;

   Return 1;
End;
$$ language plpgsql;