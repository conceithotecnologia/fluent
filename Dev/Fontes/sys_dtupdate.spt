   ----------------------------------------------------------------------------------------------
   Params.: <userid> - sessão que deve ter a database modificada
            <novadatabase> - nova database que será gravada na sessão
   ----------------------------------------------------------------------------------------------
   Retorno: retorna 1
   ----------------------------------------------------------------------------------------------
   Descri.: Rotina remodelada
   ============================================================================================== */
create or replace function sys_dtupdate####???
(  in in_dtbase date,
   out outres integer )
as $$
begin
   outres:= 0;

   update [(ss027)]
      set dtbase = in_dtbase
    where session = sys_session();

   outres:= 1;
end;
$$ language plpgsql;
