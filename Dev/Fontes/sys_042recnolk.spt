create or replace function sys_042recnolk####???
(  in pCodTable   varchar(30),
      pColumnname varchar(30),
   out iInteger integer )
as $$
begin
   select recno_lookup
     into iInteger
     from [(ss042)]
    where session    = sys_session()
      and CodTable   = upper(pCodTable)
      and columnname = lower(pColumnname);
end;
$$ language plpgsql;
