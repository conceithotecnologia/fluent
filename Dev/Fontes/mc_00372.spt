/**
   Validação das informações do contrato.

	@author    Ricardo Gonçalves
	@date      09/04/2012 18:59:21
	@trigger   A2M B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

   08/10/2012 15:34:05  v2    Ricardo Gonçalves.
      [+] Validação do contrato em relação aos itens de cobrança
*/
CREATE OR REPLACE FUNCTION mc_00372####???()
  RETURNS trigger AS
$$
Declare
   r              record;
   na2p_percent   [(a2p)].a2p_percent%type;
BEGIN
   if tg_op <> 'DELETE' then
      if tg_op = 'INSERT' then
         new.a2m_estado := 1;
      else
         -- Verifica se o contrato pode entrar em vigência
         if old.a2m_estado = 1 and new.a2m_estado = 2 then
            -- Verifica assinatura
            if new.a2m_assinatura is null then
               raise '[[O contrato % não pode entrar em vigor porque a data de assinatura não foi informada.]]', new.recno;
            end if;

            -- Soma os percentual a serem cobrados dentro do mês
            select sum(a2p_percent)
              into na2p_percent
              from [(a2p)]
             where a2m_recno = new.recno;

            if not Found or coalesce(na2p_percent, 0) <> 100 then
               raise '[[O contrato % não pode entrar em vigor porque os vencimentos não somam 100%%.]]', new.recno;
            end if;
         end if;
         
         -- Encerramento de contrato
         if old.a2m_estado = 2 and new.a2m_estado = 3 then
            if sys_access####???('crm_enccontrato') <> 1 then
               raise '[[O usuário % não tem permissão para encerrar o contrato %]]', sys_username####???(), new.recno;
            end if;
         end if;
         
         -- Alteração do tipo de contrato padrão para outros tipos
         if new.a2m_tipo != old.a2m_tipo and new.a2m_tipo <> 1 then
            if sys_access####???('crm_altcontrato') <> 1 then
               raise '[[O usuário "%" não tem permissão para alteror o tipo do contrato %.]]', sys_username####???(), new.recno;
            end if;
         end if;

         if new.a2m_estado < old.a2m_estado then
            raise '[[O contrato % não pode sofrer alterações porque está encerrado.]]', new.recno;
         end if;

         if not exists(
            select 1
              from [(a38)]
             where a2m_recno = new.recno)
         then
            raise '[[O contrato % não pode entrar em vigor porque não possui itens de cobrança.]]', new.recno;
         end if;
      end if;
      
      if new.a2m_estado < 3 then
         select sa2_ctrl, sa2_nome, sa2_mailadencontr, sa2_ativo
           into r
           from [(sa2)]
          where a1_codcli = new.a1_codcli
            and sa2_ctrl  = new.sa2_ctrl
            and sa2_ativo = 1;

         if r.sa2_ativo <> 1 then
            raise '[[O contato % - % não pode ser responsável pelo contrato % porque está inativo!]]',
               r.sa2_ctrl, r.sa2_nome, new.recno;
         end if;
         
         if r.sa2_mailadencontr <> 1 then
            raise '[[O contato % - % não pode ser responsável pelo contrato % porque seu cadastro indica que ele não pode receber informações sobre o contrato!]]',
               r.sa2_ctrl, r.sa2_nome, new.recno;
         end if;
      end if;
      
      return new;
   else
      return old;
   end if;
END;
$$
  LANGUAGE 'plpgsql' VOLATILE;