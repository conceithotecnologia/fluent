/**
   Validação do roteiro de produção

   Autor    Ricardo Gonçalves
   Data     13/07/2018
   Trigger  SE6 B IUD

	Histórico
	--------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_01169####???()
Returns trigger As
$$
BEGIN
	IF TG_OP = 'DELETE' THEN
		RETURN old;
	ELSE   
      if TG_OP = 'INSERT' then
         if new.se6_operacao is null then
            select coalesce(max(se6_operacao), 0) + 10
              into new.se6_operacao
              from [(se6)]
             where sdg_roteiro = new.sdg_roteiro
               and recno <> new.recno;
         end if;      
      end if;

		RETURN new;
	END IF;
END
$$
language 'plpgsql';