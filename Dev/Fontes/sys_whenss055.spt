| Descrição: Habilita a digitação do conteudo de acordo com o tipo do campo e campos para indicação de legenda                     |
| -------------------------------------------------------------------------------------------------------------------------------- |
| Parametros                                                                                                                       |
|  [Entrada]······················································································································ |
             sys_session(): Id da sessão ativa - IP / Empresa / Filial
==================================================================================================================================*/
create or replace function sys_whenss055####??? (
   out out_res integer )
As $$
declare
   iobj_id_field [(ss055)].obj_id_field%type;
   iaction       [(ss055)].action%type;
   fdatatype     [(ss085)].datatype%type;
   fcolumnname   [(ss012)].columnname%type;
   cSessao       [(ss027)].session%type;
   iEnabled      integer;
begin
   out_res := 0;
   -- Recupera a sessao ativa
   cSessao := sys_session();
   iobj_id_field := sys_042string####???('obj_id_field');
   -- Busca o tipo de campo no dicionário de colunas a partir da indicação da tabela de sessão
   select b.datatype into fdatatype
     from ss012 a
          join ss085 b
            on b.recno = a.content_type
    where a.obj_id = iobj_id_field;

   select sys_042integer####???('action') into iaction;

   if fdatatype = 'V' Then
      fColumnName = 'string_';
   Elsif fdatatype = 'I' Then
      fColumnName = 'integer_';
   Elsif fdatatype = 'F' Then
      fColumnName = 'number_';
   Elsif fdatatype = 'M' Then
      fColumnName = 'text_';
   Elsif fdatatype = 'D' Then
      fColumnName = 'date_';
   End If;

   -- Atualiza a tabela de sessão desabilitando os campos de conteudo
   update [(ss042)]
      set enabled = 0
    where session = cSessao
      and Columnname in ('string_', 'integer_', 'number_', 'text_', 'date_');

   -- Atualiza a tabela de sessão habilitando o conteudo para digitação de acordo com o tipo do campo
   update [(ss042)]
      set enabled = 1
    where session = cSessao
      and Columnname = fColumnName;

   iEnabled:= 0;
   If iAction = 2 Then
      iEnabled := 1;
   end if;

   -- Atualiza a tabela de sessão com o status para formatação do tipo Legenda
   update [(ss042)]
      set enabled = iEnabled
    where session = cSessao
      and Columnname in ('color', 'hint');

   out_res := 1;
end;
$$ language plpgsql;
