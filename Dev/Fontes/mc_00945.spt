/**
   Validação das informações de tributação por estado.

	@author    Ricardo Gonçalves
	@date      10/06/2016
	@trigger   A0J B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00945####???()
  RETURNS trigger AS
$$
Declare
   vsbx_descri    [(sbx)].sbx_descri%type;
   vf4_tipo       [(sf4)].f4_tipo%type;
BEGIN
   if tg_op = 'DELETE' then
      return old;
   end if;
   
   select f4_tipo
     into vf4_tipo
     from [(sf4)]
    where f4_tes = new.f4_tes; 
   
   select sbx_descri
     into vsbx_descri
     from [(sbx)]
    where sbx_st = new.sbx_st;
   
   if new.sbx_st = '00' then
      if new.a0j_icms <= 0 then
         raise '[[Situação tributária "% - %" exige aliquota de icms.]]', new.sbx_st, vsbx_descri;
      end if;
      new.a0j_iva := 0;
      new.a0j_icmsred := 0;
   end if;
   
   if new.sbx_st = '10' then
      if new.a0j_icms <= 0 then
         raise '[[Situação tributária % - % exige aliquota de icms.]]', new.sbx_st, vsbx_descri;
      end if;

      new.a0j_iva := 0;
      new.a0j_icmsred := 0;
   end if;
   
   return new;
END;
$$
LANGUAGE 'plpgsql' VOLATILE;