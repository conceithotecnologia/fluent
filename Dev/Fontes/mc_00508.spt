Create or Replace Function mc_00508####???()
Returns trigger
AS $$
Begin
   -- Autaliza a assinatura digital
   if new.coduser is not null then
      select signature
        into new.sd4_assinatura
        from [(ss003)]
       where coduser = new.coduser;
   end if;

    -- Retorno da trigger
   if tg_op = 'DELETE' then
      return old;
   else
      return new;
   end if;
End;
$$ language plpgsql;