/*============================================================================
  Empresa..: Conceitho Tecnologia
  Descrição: Gerar Dados das Vendas Por Produto em Determinado Periodo
  Autor....: Fabio Carvalho
  Data.....: 12/02/2019
  ---------------|------------------------------------------------------------
  dInicial       | data inicial
  dFinal         | data final
  out_res        | 0 - Falha / 1 - Sucesso
  ============================================================================*/
Create or Replace Function mc_01204####???
( in  dInicial date,
  in  dFinal   date,
  out out_res   integer)
As $$
declare
   cSessao    [(fr1)].session%type;         -- Sessão corrente do usuário
begin
   out_res := 1;

   cSessao := sys_session();

   -- Limpa os dados da Sessão antes de montar um novo relatório
   Delete From [(tgn)]
         Where session = cSessao;

   insert into [(tgn)] (session, b1_codpro, tgn_quantidade, tgn_total, tgn_quilos, tgn_p13, tgn_pmedio)
                select  cSessao, a.b1_codpro,
                        sum(a.tg4_quantidade),
                        sum(a.tg4_total),
                        sum(a.tg4_quilos),
                        sum(a.tg4_quilos) / 13,
                        sum(a.tg4_total) / sum(a.tg4_quantidade)
                  from (select *
                          from [(vtg3tg4)]
                         where tg3_data >= dInicial
                           and tg3_data <= dFinal ) a
              group by a.b1_codpro
              order by a.b1_codpro;
end;
$$ language 'plpgsql';
