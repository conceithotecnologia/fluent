/**
   Validações dos Adiantamentos das notas fiscais de saída - TLH

	@author    Gabriel Montes
	@date      14/10/2014  09:00:00
	@trigger   NG2 A IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
*/
Create or Replace Function mc_00848####???()
Returns trigger
AS
$$
Declare
   iNumero        [(tlc)].tlc_numero%type;      -- Número serial da nota fiscal
   iAprovada      [(tlc)].tlc_financas%type;    -- Aprovação financeira da nota
Begin
   If tg_op = 'INSERT' Then
      
      if (select nf_origem 
           from [(sc6)]
          where recno = new.sc6_recno) is null
      then
      
         update [(sc6)]
            set sc6_status = 3,
                nf_origem  = new.nfk_recno,
                codtable   = 'NFK'
          where recno = new.sc6_recno;
      end if;
         
      return new;
   End If;
   
   If tg_op = 'UPDATE' Then
   
      update [(sc6)]
         set sc6_status = 3,
             nf_origem  = new.nfk_recno,
             codtable   = 'NFK'
       where recno = new.sc6_recno;
      
      update [(sc6)]
         set sc6_status = 2,
             nf_origem  = null,
             codtable   = null
       where recno = old.sc6_recno;
      
      return new;
   End If;
   
   If tg_op = 'DELETE' Then
      update [(sc6)]
         set sc6_status = 2,
             nf_origem  = null,
             codtable   = null
       where recno = old.sc6_recno;
      
      return old;
   End If;
End;
$$  language plpgsql;