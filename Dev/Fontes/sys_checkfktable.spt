/*============================================================================
  Empresa..: MultCont Informática
  Descrição: Checa a validade do relacionamento entre duas tabelas
  Autor....: Ricardo Gonçalves
  Data.....: 26/06/2006 09:49:10

  Parametro       Descrição
  ---------------|------------------------------------------------------------
  in_table       | Tabela de Origem
  in_table_fk    | Tabela Estrangeira
  out_res        | 0 - Falha / 1 - Sucesso
  ============================================================================*/
Create or Replace Function sys_checkfktable
(  in in_table varchar,
   in in_table_fk varchar,
   out outres Integer )
As $$
Declare
   vDescriTb      varchar(85);
   vDescriTbFk    varchar(85);
   imodo          integer;
   imodoFk        integer;   
Begin
   outres:= 0;

   -- Verifica se a tabela de origem está nula
   if in_table is null then
      raise '[[Tabela de origem do relacionamento não pode ser nula.]]';
   end if;

   -- Obtem informações da tabela local
   select descricao, modo
     into vDescriTb, imodo
     from ss009
    where codtable = upper(in_table);

   -- Obtem informações da tabela extrangeira
   select descricao, modo
     into vDescriTbFk, imodoFk
     from ss009
    where codtable = upper(in_table_fk);

   vDescriTb:= upper(in_table) || ' - ' || vDescriTb;
   vDescriTbFk:= upper(in_table_fk) || ' - ' || vDescriTbFk;

   -- Valida relacionamento
   if imodo = 0 then
      if imodoFk <> 0 then
         raise '[[Tabela "%" não é compatilhada e não pode referenciar a tabela compatilhada "%".]]', vDescriTb, vDescriTbFk;
      end if;
   else
      -- Verifica se a tabela destino é exclusiva, caso seja, e a tabela de origem seja compartilhada, gera excessão
      if imodo = 1 and imodoFk > 1 then
         raise '[[Tabela "%" é compartilhada e não pode referenciar a tabela exclusiva "%".]]', vDescriTb, vDescriTbFk;
      end if;
   end if;

   outres:= 1;
End;
$$ language plpgsql;