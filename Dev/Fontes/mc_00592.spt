/**
   Validação de cadastro de solicitante

	@author    Gabriel Montes
	@date      21/06/2013 11:05:00
	@trigger   A3W B IUD

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
CREATE OR REPLACE FUNCTION mc_00592####???()
Returns trigger
as
$$
Declare
Begin
   IF(tg_op = 'DELETE') THEN
      RETURN old;
   end if;
      
      if (tg_op = 'INSERT') then
         new.a3w_estado = 0;
      end if;
      
      if not exists(
         select 1
           from [(a3x)] a3x
               join [(a3w)] a3w
                 on a3x.a3w_recno = new.recno
                and a3x_situacao = 1) 
      then
         if not exists
         (select 1
              from [(a3r)] a3r
                  join [(a3w)] a3w
                    on a3r.a3w_recno = new.recno
                   and a3r_situacao = 1) 
         then      
            if not exists
            (select 1
                 from [(a3s)] a3s
                     join [(a3w)] a3w
                       on a3s.a3w_recno = new.recno
                      and a3s_situacao = 1) 
            then      
            
               if new.a3w_estado = 1 then
                  raise '[[O grupo só pode ser "ativo" depois que um solicitante "ativo" for adicionado.]]';
              end if; 
            end if;
         end if;
      end if;

      return new;      

END;
$$ 
Language plpgsql;