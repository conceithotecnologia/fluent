Create or Replace Function sys_day(TIMESTAMP) RETURNS integer AS $$
Declare

-- {Parametros de entrada}
   in_dData         Alias For $1;

Begin
   if in_dData is null then
      raise '[[Rotina "sys_day(TIMESTAMP)" nсo pode processar data nula.]]';
   end if;

    Return date_part('day', in_dData);
End;
$$ LANGUAGE plpgsql;