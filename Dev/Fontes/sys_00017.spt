
/**
   Notifica uma lista de distribuição via email que um evento de sistema ocorreu

	@author    Ricardo Gonçalves
	@date      04/08/2015
	@trigger   

   @param in_evento evento disparado
   @param in_params código do grupo de parâmetros da rotina
   
	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
create or replace function sys_00017####???(
   in in_evento varchar,
   in in_params integer)
returns text as
$$
Declare
   vrotina  [(ss036)].rotina%type;
   cmd      text;
   doc      text;   
Begin 
   select rotina
     into vrotina
     from [(ss089)]
    where event = in_evento;
    
   -- Executa a rotina que gera a mensagem
   cmd := format('select %s%s(%s)', lower(vrotina), sys_empfil####???(), in_params);

   execute cmd into doc;
   
   if doc is null then
      raise '[[A execução do evento "%" via comando "%" falhou! Nenhuma mensagem gerada.]]', in_evento, cmd;
   end if;
   
   return doc;
End;
$$
language 'plpgsql'
 