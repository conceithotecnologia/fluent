/**
   trigger tabela A1X - Penduras

	@author    Fabio Carvalho
	@date      08/02/2011
	@trigger   BEFORE

	@param

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso

*/
Create or Replace Function mc_00298####???()
Returns trigger
As $$
Declare
   cSessao    Varchar(35);
   nItens     Numeric;
   nServicos  Numeric;

Begin
   cSessao := sys_session();
   if tg_op = 'INSERT' then
      return new;
   elsif tg_op = 'UPDATE' then

      -- verifica se tem flag e permite acerto
      if mc_getflag####???('A1X', -1) = 1 then

      else
         -- Verifica se Ja foi encerrado e nao permite acerto
         if old.a1x_status = 1 then
            raise '[[ATENÇÃO. Não é Permitido Alterar movimento já encerrado. Verifique!]]';
         end if;

         -- Totalizacao de Itens
         select coalesce(sum(a1y_valor),0)
           into nItens
           From [(a1y)]
          Where a1x_recno = new.recno;

         -- Totalizacao de Serviços
         select coalesce(sum(a1z_valor),0)
           into nServicos
           From [(a1z)]
          Where a1x_recno = new.recno;

         new.a1x_valor := nItens + nServicos;
      end if;

      return new;
   else
      if old.a1x_status = 1 or old.a20_recno > 0 then
         raise '[[ATENÇÃO. Não é possivel excluir movimento já encerrado/faturado. Verifique!]]';
      end if;
         
      return old;
   end if;
End;
$$ language plpgsql;